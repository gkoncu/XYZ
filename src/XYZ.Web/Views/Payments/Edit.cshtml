@using XYZ.Domain.Enums
@model UpdatePaymentCommand

@{
    ViewData["Title"] = "Aidat Düzenle";
    var studentName = ViewBag.StudentFullName as string;
}

<section class="mb-3 d-flex flex-wrap justify-content-between align-items-center gap-2">
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="text-muted small text-decoration-none">&larr; Aidat detayına dön</a>
        <h2 class="h4 mb-0 mt-1">Aidat Düzenle</h2>
        @if (!string.IsNullOrWhiteSpace(studentName))
        {
            <div class="text-muted small">Öğrenci: <strong>@studentName</strong></div>
        }
    </div>
</section>

<section class="card-surface">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="vstack gap-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Amount" class="form-label">Tutar</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="DiscountAmount" class="form-label">İndirim</label>
                    <input asp-for="DiscountAmount" class="form-control" />
                    <span asp-validation-for="DiscountAmount" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Status" class="form-label">Durum</label>
                    <select asp-for="Status"
                            asp-items="@(Html.GetEnumSelectList<PaymentStatus>()
                                        .Select(x => new SelectListItem
                                        {
                                            Value = x.Value,
                                            Text = x.Text
                                        }))"
                            class="form-select">
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Notes" class="form-label">Not</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="(opsiyonel)"></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Vazgeç</a>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
