@model UpdatePaymentCommand
@{
    ViewData["Title"] = "Ödeme Düzenle";
}

<section class="card-surface">
    <div class="card-body">
        <h2 class="h5 mb-3">Ödeme Düzenle</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label class="form-label">Öğrenci</label>
            </div>

            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Tutar</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DiscountAmount" class="form-label">İndirim Tutarı</label>
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label">Durum</label>
                <select asp-for="Status" class="form-select">
                    @foreach (PaymentStatus s in Enum.GetValues(typeof(PaymentStatus)))
                    {
                        <option value="@((int)s)" selected="@(s == Model.Status ? "selected" : null)">
                            @s.ToDisplayName()
                        </option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</section>
