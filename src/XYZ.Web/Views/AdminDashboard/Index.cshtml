@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Yönetim Paneli";
}

<h2 class="mb-3">Yönetim Paneli</h2>
<p class="text-muted small mb-4">
    Hoş geldin, @Model.UserDisplayName
</p>

<div class="row g-3">
    <div class="col-md-3 col-sm-6">
        <div class="card-surface p-3">
            <div class="text-muted small">Öğrenci Sayısı</div>
            <div class="fs-4 fw-semibold">@Model.Stats.StudentCount</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card-surface p-3">
            <div class="text-muted small">Sınıf Sayısı</div>
            <div class="fs-4 fw-semibold">@Model.Stats.ClassCount</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card-surface p-3">
            <div class="text-muted small">Bugünkü Seanslar</div>
            <div class="fs-4 fw-semibold">@Model.Stats.TodaySessionsCount</div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card-surface p-3">
            <div class="text-muted small">Yaklaşan Seanslar</div>
            <div class="fs-4 fw-semibold">@Model.Stats.UpcomingSessionsCount</div>
        </div>
    </div>
</div>

<div class="row g-3 mt-3">
    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="text-muted small">Bekleyen Ödemeler</div>
            <div class="d-flex justify-content-between align-items-baseline mt-1">
                <div>
                    <div class="fw-semibold">@Model.Stats.PendingPaymentsCount adet</div>
                    <div class="text-muted small">Ödeme bekliyor</div>
                </div>
                <div class="fs-5 fw-semibold">
                    @Model.Stats.PendingPaymentsAmount.ToString("C2")
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="text-muted small">Son Duyurular</div>
            <div class="fs-4 fw-semibold mt-1">
                @Model.Stats.RecentAnnouncementsCount
            </div>
            <div class="text-muted small">Son günlerde yayınlanan duyurular</div>
        </div>
    </div>
</div>
