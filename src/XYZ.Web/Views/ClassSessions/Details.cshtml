@model XYZ.Application.Features.ClassSessions.Queries.GetClassSessionById.ClassSessionDetailDto

@{
    ViewData["Title"] = "Seans Detayı";
    var statusText = Model.Status.ToString();
}

<h2 class="mb-3">Seans Detayı</h2>

<div class="card card-surface mb-3">
    <div class="card-body">
        <h3 class="h5 mb-3">@Model.Title</h3>

        <dl class="row mb-0">
            <dt class="col-sm-3">Sınıf</dt>
            <dd class="col-sm-9">@Model.ClassName</dd>

            <dt class="col-sm-3">Şube</dt>
            <dd class="col-sm-9">@Model.BranchName</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Saat</dt>
            <dd class="col-sm-9">
                @Model.StartTime.ToString("HH\\:mm")
                -
                @Model.EndTime.ToString("HH\\:mm")
            </dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">@statusText</dd>

            <dt class="col-sm-3">Konum</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.Location))
                {
                    @Model.Location
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </dd>

            <dt class="col-sm-3">Koç Notu</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.CoachNote))
                {
                    @Model.CoachNote
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </dd>

            <dt class="col-sm-3">Katılım</dt>
            <dd class="col-sm-9">
                <span>Toplam: @Model.TotalStudents</span>,
                <span class="text-success">Katılan: @Model.PresentCount</span>,
                <span class="text-danger">Katılmayan: @Model.AbsentCount</span>
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <div>
        <a asp-action="Index"
           class="btn btn-outline-secondary btn-sm">
            &laquo; Seans listesine dön
        </a>
    </div>
    <div>
        <a asp-controller="Attendance"
           asp-action="Session"
           asp-route-id="@Model.Id"
           class="btn btn-primary btn-sm">
            Yoklamaya git
        </a>
    </div>
</div>
