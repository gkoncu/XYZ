﻿@using XYZ.Domain.Enums
@model XYZ.Web.Models.Attendance.SessionAttendanceViewModel

@{
    ViewData["Title"] = "Yoklama - " + Model.ClassName;

    var unknownValue = (int)AttendanceStatus.Unknown;
    var presentValue = (int)AttendanceStatus.Present;
    var absentValue = (int)AttendanceStatus.Absent;
    var excusedValue = (int)AttendanceStatus.Excused;
    var lateValue = (int)AttendanceStatus.Late;

    static string StatusLabel(int status) => status switch
    {
        (int)AttendanceStatus.Present => "Katıldı",
        (int)AttendanceStatus.Absent => "Katılmadı",
        (int)AttendanceStatus.Excused => "İzinli",
        (int)AttendanceStatus.Late => "Geç Kaldı",
        _ => "Bilinmiyor"
    };
}

<div class="d-flex justify-content-between align-items-start mb-3 gap-3">
    <div>
        <h2 class="mb-0">@Model.ClassName</h2>
        <div class="text-muted small">
            @Model.Date.ToString("dd.MM.yyyy") • @Model.StartTime.ToString("hh\\:mm") - @Model.EndTime.ToString("hh\\:mm")
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Title))
        {
            <div class="text-muted small">@Model.Title</div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Location))
        {
            <div class="text-muted small">Konum: @Model.Location</div>
        }
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        &laquo; Seanslara Dön
    </a>
</div>

@if (TempData["ErrorMessage"] is string error && !string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (TempData["SuccessMessage"] is string success && !string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Yoklama kaydedilemedi. Lütfen hataları kontrol edip tekrar deneyin.
    </div>
}

@if (Model.Students == null || !Model.Students.Any())
{
    <div class="alert alert-info">
        Bu seans için atanmış öğrenci bulunamadı.
    </div>
}
else
{
    <form asp-action="Session" method="post" class="position-relative">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="SessionId" />
        <input type="hidden" asp-for="ClassId" />

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div>
                    <h5 class="mb-0">Öğrenci Yoklama Listesi</h5>
                    <small class="text-muted">Varsayılan durum: <strong>Bilinmiyor</strong>. Her öğrenci için durumu seçin.</small>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button type="button" class="btn btn-outline-primary btn-sm" id="btnAllPresent">
                        Hepsi Katıldı
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnAllUnknown">
                        Hepsi Bilinmiyor
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive d-none d-md-block">
                    <table class="table table-striped align-middle mb-0">
                        <thead>
                            <tr>
                                <th style="min-width: 200px;">Öğrenci</th>
                                <th style="min-width: 420px;">Durum</th>
                                <th style="width: 120px;">Puan</th>
                                <th style="min-width: 200px;">Not</th>
                                <th style="min-width: 220px;">Koç Yorumu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Students.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <strong>@Model.Students[i].FullName</strong>
                                        <input type="hidden" asp-for="Students[@i].AttendanceId" />
                                        <input type="hidden" asp-for="Students[@i].StudentId" />
                                    </td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-2">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="Students[@i].Status" value="@unknownValue" />
                                                <label class="form-check-label">Bilinmiyor</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="Students[@i].Status" value="@presentValue" />
                                                <label class="form-check-label">Katıldı</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="Students[@i].Status" value="@lateValue" />
                                                <label class="form-check-label">Geç Kaldı</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="Students[@i].Status" value="@excusedValue" />
                                                <label class="form-check-label">İzinli</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" asp-for="Students[@i].Status" value="@absentValue" />
                                                <label class="form-check-label">Katılmadı</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <input asp-for="Students[@i].Score" class="form-control form-control-sm text-center" type="number" min="0" max="100" />
                                    </td>
                                    <td>
                                        <textarea asp-for="Students[@i].Note" class="form-control form-control-sm" rows="1" placeholder="Not"></textarea>
                                    </td>
                                    <td>
                                        <textarea asp-for="Students[@i].CoachComment" class="form-control form-control-sm" rows="1" placeholder="Koç yorumu"></textarea>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-md-none">
                    <div class="vstack gap-3">
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <div class="card border shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div>
                                            <div class="fw-semibold">@Model.Students[i].FullName</div>
                                            <div class="small text-muted">Mevcut: @StatusLabel(Model.Students[i].Status)</div>
                                        </div>
                                    </div>

                                    <input type="hidden" asp-for="Students[@i].AttendanceId" />
                                    <input type="hidden" asp-for="Students[@i].StudentId" />

                                    <div class="mt-3">
                                        <div class="btn-group w-100" role="group" aria-label="Yoklama durumu">
                                            <input type="radio" class="btn-check" name="Students[@i].Status" id="s@i_unknown" value="@unknownValue" autocomplete="off" @(Model.Students[i].Status == unknownValue ? "checked" : "")>
                                            <label class="btn btn-outline-secondary" for="s@i_unknown">Bilinmiyor</label>

                                            <input type="radio" class="btn-check" name="Students[@i].Status" id="s@i_present" value="@presentValue" autocomplete="off" @(Model.Students[i].Status == presentValue ? "checked" : "")>
                                            <label class="btn btn-outline-success" for="s@i_present">Katıldı</label>

                                            <input type="radio" class="btn-check" name="Students[@i].Status" id="s@i_late" value="@lateValue" autocomplete="off" @(Model.Students[i].Status == lateValue ? "checked" : "")>
                                            <label class="btn btn-outline-warning" for="s@i_late">Geç</label>

                                            <input type="radio" class="btn-check" name="Students[@i].Status" id="s@i_excused" value="@excusedValue" autocomplete="off" @(Model.Students[i].Status == excusedValue ? "checked" : "")>
                                            <label class="btn btn-outline-info" for="s@i_excused">İzinli</label>

                                            <input type="radio" class="btn-check" name="Students[@i].Status" id="s@i_absent" value="@absentValue" autocomplete="off" @(Model.Students[i].Status == absentValue ? "checked" : "")>
                                            <label class="btn btn-outline-danger" for="s@i_absent">Yok</label>
                                        </div>
                                    </div>

                                    <div class="row g-2 mt-3">
                                        <div class="col-4">
                                            <label class="form-label small mb-1">Puan</label>
                                            <input asp-for="Students[@i].Score" class="form-control text-center" type="number" min="0" max="100" placeholder="-" />
                                        </div>
                                        <div class="col-8">
                                            <label class="form-label small mb-1">Not</label>
                                            <input asp-for="Students[@i].Note" class="form-control" placeholder="Not" />
                                        </div>
                                        <div class="col-12">
                                            <label class="form-label small mb-1">Koç Yorumu</label>
                                            <textarea asp-for="Students[@i].CoachComment" class="form-control" rows="2" placeholder="Koç yorumu"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white border-0 d-none d-md-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>

        <div class="d-md-none position-sticky bottom-0 start-0 end-0 bg-white border-top" style="z-index: 1020;">
            <div class="container-fluid py-2">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">Kaydet</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
                </div>
            </div>
        </div>
    </form>

    <script>
        (function () {
            const presentValue = "@presentValue";
            const unknownValue = "@unknownValue";

            function setAll(statusValue) {
                const desktop = document.querySelectorAll('input[type="radio"][name$=".Status"][value="' + statusValue + '"]');
                desktop.forEach(r => { r.checked = true; });

                const mobile = document.querySelectorAll('input[type="radio"].btn-check[name^="Students["][name$="].Status"][value="' + statusValue + '"]');
                mobile.forEach(r => { r.checked = true; r.dispatchEvent(new Event('change', { bubbles: true })); });
            }

            const btnAllPresent = document.getElementById('btnAllPresent');
            const btnAllUnknown = document.getElementById('btnAllUnknown');

            if (btnAllPresent) btnAllPresent.addEventListener('click', () => setAll(presentValue));
            if (btnAllUnknown) btnAllUnknown.addEventListener('click', () => setAll(unknownValue));
        })();
    </script>
}
