@using XYZ.Web.Models.Attendance
@model SessionAttendanceViewModel

@{
    ViewData["Title"] = "Yoklama - " + Model.ClassName;
}

<div class="container py-4">
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-link px-0">
            &larr; Bugünkü seanslara dön
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between flex-wrap gap-2">
                <div>
                    <h1 class="h4 mb-1">@Model.ClassName</h1>
                    <div class="text-muted small">
                        @Model.Title
                    </div>
                </div>
                <div class="text-end small">
                    <div>
                        Tarih:
                        <strong>@Model.Date.ToDateTime(TimeOnly.MinValue).ToString("dd.MM.yyyy")</strong>
                    </div>
                    <div>
                        Saat:
                        <strong>@Model.StartTime.ToString("HH\\:mm") - @Model.EndTime.ToString("HH\\:mm")</strong>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.Location))
                    {
                        <div>
                            Lokasyon:
                            <strong>@Model.Location</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }

    @if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    @if (!Model.Students.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <h5 class="card-title mb-2">Bu seansa bağlı öğrenci bulunamadı</h5>
                <p class="text-muted mb-0">
                    Sınıfta aktif kayıtlı öğrenci yok veya enrollment henüz eklenmemiş.
                </p>
            </div>
        </div>
    }
    else
    {
        <form asp-action="Session" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="SessionId" />
            <input type="hidden" asp-for="ClassId" />

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th style="width: 25%;">Öğrenci</th>
                                    <th style="width: 15%;">Durum</th>
                                    <th style="width: 20%;">Not</th>
                                    <th style="width: 10%;">Puan</th>
                                    <th style="width: 30%;">Koç Notu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.Students.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Model.Students[i].FullName
                                            <input type="hidden" asp-for="Students[@i].AttendanceId" />
                                            <input type="hidden" asp-for="Students[@i].StudentId" />
                                        </td>
                                        <td>
                                            <select asp-for="Students[@i].Status" class="form-select form-select-sm">
                                                <option value="1">Katıldı</option>
                                                <option value="0">Katılmadı</option>
                                                <option value="2">İzinli</option>
                                            </select>
                                        </td>
                                        <td>
                                            <input asp-for="Students[@i].Note"
                                                   class="form-control form-control-sm"
                                                   placeholder="Kısa not" />
                                        </td>
                                        <td style="max-width: 90px;">
                                            <input asp-for="Students[@i].Score"
                                                   type="number"
                                                   min="0" max="100"
                                                   class="form-control form-control-sm"
                                                   placeholder="%" />
                                        </td>
                                        <td>
                                            <textarea asp-for="Students[@i].CoachComment"
                                                      rows="1"
                                                      class="form-control form-control-sm"
                                                      placeholder="Detaylı koç notu"></textarea>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary">
                            Yoklamayı Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </form>
    }
</div>
