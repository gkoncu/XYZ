﻿﻿@using System
@model IList<XYZ.Web.Models.Attendance.TodaySessionViewModel>

@{
    ViewData["Title"] = "Yoklama - Antrenmanlar";

    var selectedDateString = ViewBag.SelectedDate as string;
    DateOnly selectedDate;
    if (!DateOnly.TryParse(selectedDateString, out selectedDate))
    {
        selectedDate = DateOnly.FromDateTime(DateTime.Today);
    }

    var prevDate = selectedDate.AddDays(-1);
    var nextDate = selectedDate.AddDays(1);
}

<div class="d-flex flex-wrap align-items-center justify-content-between mb-3 gap-2">
    <div>
        <h2 class="mb-0">Yoklama</h2>
        <small class="text-muted">
            @selectedDate.ToString("dd.MM.yyyy") tarihindeki planlı seanslar
        </small>
    </div>

    <form method="get" class="d-flex align-items-center gap-2">
        <input type="date"
               name="date"
               class="form-control"
               style="min-width: 180px;"
               value="@selectedDate.ToString("yyyy-MM-dd")" />
        <button type="submit" class="btn btn-primary">
            Güncelle
        </button>
    </form>
</div>

<div class="d-flex flex-wrap justify-content-end mb-3 gap-2">
    <a asp-action="Index"
       asp-route-date="@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")"
       class="btn btn-outline-secondary btn-sm">
        Bugün
    </a>

    <a asp-action="Index"
       asp-route-date="@prevDate.ToString("yyyy-MM-dd")"
       class="btn btn-outline-secondary btn-sm">
        &laquo; Önceki (@prevDate.ToString("dd.MM"))
    </a>

    <a asp-action="Index"
       asp-route-date="@nextDate.ToString("yyyy-MM-dd")"
       class="btn btn-outline-secondary btn-sm">
        Sonraki (@nextDate.ToString("dd.MM")) &raquo;
    </a>
</div>

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">
        Bu tarihte seans bulunmuyor.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var s in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="card-title mb-1">@s.ClassName</h5>
                                @if (!string.IsNullOrWhiteSpace(s.BranchName))
                                {
                                    <small class="text-muted">@s.BranchName</small>
                                }
                            </div>
                            <span class="badge bg-light text-dark border">
                                @s.Date.ToString("dd.MM.yyyy")
                            </span>
                        </div>

                        <p class="mb-1">
                            <strong>Saat:</strong>
                            @s.StartTime.ToString("HH:mm") - @s.EndTime.ToString("HH:mm")
                        </p>

                        @if (!string.IsNullOrWhiteSpace(s.Title))
                        {
                            <p class="mb-2">
                                <strong>Başlık:</strong> @s.Title
                            </p>
                        }

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex flex-column">
                                    <small class="text-muted">
                                        Toplam: @s.TotalStudents
                                    </small>
                                    <div class="mt-1">
                                        <span class="badge bg-success me-1">
                                            Katılan: @s.PresentCount
                                        </span>
                                        <span class="badge bg-danger">
                                            Katılmayan: @s.AbsentCount
                                        </span>
                                    </div>
                                </div>

                                @if (s.HasAttendance)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success">
                                        Yoklama Alındı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning border border-warning">
                                        Yoklama Bekliyor
                                    </span>
                                }
                            </div>

                            <a asp-action="Session"
                               asp-route-id="@s.SessionId"
                               class="btn btn-sm btn-primary w-100">
                                @(s.HasAttendance ? "Görüntüle" : "Yoklama Al")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
