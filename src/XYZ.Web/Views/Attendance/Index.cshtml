﻿﻿@using System
@model IList<XYZ.Web.Models.Attendance.TodaySessionViewModel>

@{
    ViewData["Title"] = "Yoklama - Antrenmanlar";

    var selectedDateString = ViewBag.SelectedDate as string;
    DateOnly selectedDate;
    if (!DateOnly.TryParse(selectedDateString, out selectedDate))
    {
        selectedDate = DateOnly.FromDateTime(DateTime.Today);
    }

    var today = DateOnly.FromDateTime(DateTime.Today);
    var yesterday = today.AddDays(-1);
    var tomorrow = today.AddDays(1);

    var prevDate = selectedDate.AddDays(-1);
    var nextDate = selectedDate.AddDays(1);

    string ChipClass(bool active) => active ? "btn btn-sm btn-primary" : "btn btn-sm btn-outline-secondary";
}

<section class="mb-3">
    <div class="d-flex flex-wrap align-items-start justify-content-between gap-2">
        <div>
            <h2 class="mb-0">Yoklama Antrenmanları</h2>
            <small class="text-muted">
                @selectedDate.ToString("dd.MM.yyyy") tarihindeki planlanmış antrenmanlar
            </small>
        </div>

        <div class="d-flex gap-2">
            <button type="button" class="btn btn-sm btn-outline-primary d-md-none"
                    data-bs-toggle="offcanvas" data-bs-target="#attDatePicker" aria-controls="attDatePicker">
                Tarih Seç
            </button>

            <form method="get" class="d-none d-md-flex align-items-center gap-2">
                <input type="date"
                       name="date"
                       class="form-control"
                       style="min-width: 180px;"
                       value="@selectedDate.ToString("yyyy-MM-dd")" />
                <button type="submit" class="btn btn-primary">
                    Tarihi Güncelle
                </button>
            </form>
        </div>
    </div>

    <!-- Quick chips -->
    <div class="d-flex flex-wrap gap-2 mt-2">
        <a asp-action="Index" asp-route-date="@yesterday.ToString("yyyy-MM-dd")" class="@ChipClass(selectedDate == yesterday)">
            Dün
        </a>

        <a asp-action="Index" asp-route-date="@today.ToString("yyyy-MM-dd")" class="@ChipClass(selectedDate == today)">
            Bugün
        </a>

        <a asp-action="Index" asp-route-date="@tomorrow.ToString("yyyy-MM-dd")" class="@ChipClass(selectedDate == tomorrow)">
            Yarın
        </a>

        <span class="ms-md-auto d-flex gap-2">
            <a asp-action="Index"
               asp-route-date="@prevDate.ToString("yyyy-MM-dd")"
               class="btn btn-outline-secondary btn-sm">
                &laquo; Önceki Gün (@prevDate.ToString("dd.MM"))
            </a>

            <a asp-action="Index"
               asp-route-date="@nextDate.ToString("yyyy-MM-dd")"
               class="btn btn-outline-secondary btn-sm">
                Sonraki Gün (@nextDate.ToString("dd.MM")) &raquo;
            </a>
        </span>
    </div>
</section>

<!-- Mobile offcanvas date picker -->
<div class="offcanvas offcanvas-bottom" tabindex="-1" id="attDatePicker" aria-labelledby="attDatePickerLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="attDatePickerLabel">Tarih Seç</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
    </div>
    <div class="offcanvas-body">
        <form method="get" class="row g-2">
            <div class="col-12">
                <label class="form-label small mb-1">Tarih</label>
                <input type="date"
                       name="date"
                       class="form-control"
                       value="@selectedDate.ToString("yyyy-MM-dd")" />
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary flex-fill" data-bs-dismiss="offcanvas">Uygula</button>
                <a asp-action="Index" asp-route-date="@today.ToString("yyyy-MM-dd")" class="btn btn-outline-secondary flex-fill">
                    Bugün
                </a>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">
        Bu tarih için planlanmış herhangi bir antrenman yok.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var s in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="card-title mb-1">@s.ClassName</h5>
                                @if (!string.IsNullOrWhiteSpace(s.BranchName))
                                {
                                    <small class="text-muted">@s.BranchName</small>
                                }
                            </div>
                            <span class="badge bg-light text-dark border">
                                @s.Date.ToString("dd.MM.yyyy")
                            </span>
                        </div>

                        <p class="mb-1">
                            <strong>Saat:</strong>
                            @s.StartTime.ToString("HH:mm") - @s.EndTime.ToString("HH:mm")
                        </p>

                        @if (!string.IsNullOrWhiteSpace(s.Title))
                        {
                            <p class="mb-2">
                                <strong>Başlık:</strong> @s.Title
                            </p>
                        }

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex flex-column">
                                    <small class="text-muted">
                                        Toplam: @s.TotalStudents
                                    </small>
                                    <div class="mt-1">
                                        <span class="badge bg-success me-1">
                                            Katılan: @s.PresentCount
                                        </span>
                                        <span class="badge bg-danger">
                                            Katılmayan: @s.AbsentCount
                                        </span>
                                    </div>
                                </div>

                                @if (s.HasAttendance)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success">
                                        Yoklama Alındı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning border border-warning">
                                        Yoklama Bekliyor
                                    </span>
                                }
                            </div>

                            <a asp-action="Session"
                               asp-route-id="@s.SessionId"
                               class="btn btn-sm btn-primary w-100">
                                Yoklama Detayı
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
