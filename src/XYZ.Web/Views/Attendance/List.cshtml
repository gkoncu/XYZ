﻿@using XYZ.Domain.Enums
@model XYZ.Application.Common.Models.PaginationResult<XYZ.Application.Features.Attendances.Queries.GetAttendanceList.AttendanceListItemDto>

@{
    ViewData["Title"] = "Yoklama Listesi";

    var q = ViewBag.Q as string ?? "";
    var statusFilter = ViewBag.Status as string ?? "";
    var classId = ViewBag.ClassId as int?;
    var studentId = ViewBag.StudentId as int?;

    string StatusText(AttendanceStatus s) => s switch
    {
        AttendanceStatus.Unknown => "Bilinmiyor",
        AttendanceStatus.Present => "Katıldı",
        AttendanceStatus.Absent => "Katılmadı",
        AttendanceStatus.Excused => "İzinli",
        AttendanceStatus.Late => "Geç Kaldı",
        _ => "Bilinmiyor"
    };

    string BadgeClass(AttendanceStatus s) => s switch
    {
        AttendanceStatus.Present => "badge bg-success",
        AttendanceStatus.Absent => "badge bg-danger",
        AttendanceStatus.Excused => "badge bg-secondary",
        AttendanceStatus.Late => "badge bg-warning text-dark",
        _ => "badge bg-light text-dark border"
    };

    string ChipClass(string key) => statusFilter == key
        ? "btn btn-sm btn-primary"
        : "btn btn-sm btn-outline-secondary";
}

<section class="mb-3">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
        <div>
            <h2 class="h4 mb-1">Yoklama Listesi</h2>
            <div class="text-muted small">
                Yoklama kayıtlarını filtreleyin ve seansa hızlıca gidin.
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="button" class="btn btn-sm btn-outline-primary d-md-none"
                    data-bs-toggle="offcanvas" data-bs-target="#attListFilters" aria-controls="attListFilters">
                Filtreler
            </button>

            <a asp-action="List" class="btn btn-sm btn-outline-secondary d-none d-md-inline-flex">
                Sıfırla
            </a>
        </div>
    </div>

    <!-- Quick chips -->
    <div class="d-flex flex-wrap gap-2 mt-2">
        <a class="@ChipClass("")"
           asp-action="List"
           asp-route-q="@q"
           asp-route-classId="@classId"
           asp-route-studentId="@studentId"
           asp-route-status="">
            Tümü
        </a>

        <a class="@ChipClass(nameof(AttendanceStatus.Unknown))"
           asp-action="List"
           asp-route-q="@q"
           asp-route-classId="@classId"
           asp-route-studentId="@studentId"
           asp-route-status="@nameof(AttendanceStatus.Unknown)">
            Bilinmiyor
        </a>

        <a class="@ChipClass(nameof(AttendanceStatus.Present))"
           asp-action="List"
           asp-route-q="@q"
           asp-route-classId="@classId"
           asp-route-studentId="@studentId"
           asp-route-status="@nameof(AttendanceStatus.Present)">
            Katıldı
        </a>

        <a class="@ChipClass(nameof(AttendanceStatus.Absent))"
           asp-action="List"
           asp-route-q="@q"
           asp-route-classId="@classId"
           asp-route-studentId="@studentId"
           asp-route-status="@nameof(AttendanceStatus.Absent)">
            Katılmadı
        </a>

        <a class="@ChipClass(nameof(AttendanceStatus.Excused))"
           asp-action="List"
           asp-route-q="@q"
           asp-route-classId="@classId"
           asp-route-studentId="@studentId"
           asp-route-status="@nameof(AttendanceStatus.Excused)">
            İzinli
        </a>

        <a class="@ChipClass(nameof(AttendanceStatus.Late))"
           asp-action="List"
           asp-route-q="@q"
           asp-route-classId="@classId"
           asp-route-studentId="@studentId"
           asp-route-status="@nameof(AttendanceStatus.Late)">
            Geç
        </a>
    </div>

    <!-- Desktop filters -->
    <form method="get" class="card card-body mt-3 d-none d-md-block">
        <div class="row g-2 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Arama</label>
                <input class="form-control" name="q" value="@q" placeholder="Öğrenci / Sınıf" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Durum</label>
                <select class="form-select" name="status">
                    <option value="" selected=@(string.IsNullOrWhiteSpace(statusFilter))>Tümü</option>
                    <option value=@nameof(AttendanceStatus.Unknown) selected=@(statusFilter == nameof(AttendanceStatus.Unknown))>Bilinmiyor</option>
                    <option value=@nameof(AttendanceStatus.Present) selected=@(statusFilter == nameof(AttendanceStatus.Present))>Katıldı</option>
                    <option value=@nameof(AttendanceStatus.Absent) selected=@(statusFilter == nameof(AttendanceStatus.Absent))>Katılmadı</option>
                    <option value=@nameof(AttendanceStatus.Excused) selected=@(statusFilter == nameof(AttendanceStatus.Excused))>İzinli</option>
                    <option value=@nameof(AttendanceStatus.Late) selected=@(statusFilter == nameof(AttendanceStatus.Late))>Geç Kaldı</option>
                </select>
            </div>

            <div class="col-md-3 text-end">
                <button class="btn btn-primary" type="submit">Uygula</button>
                <a class="btn btn-outline-secondary" asp-action="List">Sıfırla</a>
            </div>
        </div>

        @if (classId.HasValue)
        {
            <input type="hidden" name="classId" value="@classId.Value" />
        }
        @if (studentId.HasValue)
        {
            <input type="hidden" name="studentId" value="@studentId.Value" />
        }
    </form>
</section>

<!-- Mobile filters -->
<div class="offcanvas offcanvas-bottom" tabindex="-1" id="attListFilters" aria-labelledby="attListFiltersLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="attListFiltersLabel">Filtreler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
    </div>
    <div class="offcanvas-body">
        <form method="get" class="row g-2">
            <div class="col-12">
                <label class="form-label small mb-1">Arama</label>
                <input class="form-control" name="q" value="@q" placeholder="Öğrenci / Sınıf" />
            </div>

            <div class="col-12">
                <label class="form-label small mb-1">Durum</label>
                <select class="form-select" name="status">
                    <option value="" selected=@(string.IsNullOrWhiteSpace(statusFilter))>Tümü</option>
                    <option value=@nameof(AttendanceStatus.Unknown) selected=@(statusFilter == nameof(AttendanceStatus.Unknown))>Bilinmiyor</option>
                    <option value=@nameof(AttendanceStatus.Present) selected=@(statusFilter == nameof(AttendanceStatus.Present))>Katıldı</option>
                    <option value=@nameof(AttendanceStatus.Absent) selected=@(statusFilter == nameof(AttendanceStatus.Absent))>Katılmadı</option>
                    <option value=@nameof(AttendanceStatus.Excused) selected=@(statusFilter == nameof(AttendanceStatus.Excused))>İzinli</option>
                    <option value=@nameof(AttendanceStatus.Late) selected=@(statusFilter == nameof(AttendanceStatus.Late))>Geç Kaldı</option>
                </select>
            </div>

            @if (classId.HasValue)
            {
                <input type="hidden" name="classId" value="@classId.Value" />
            }
            @if (studentId.HasValue)
            {
                <input type="hidden" name="studentId" value="@studentId.Value" />
            }

            <div class="col-12 d-flex gap-2 mt-2">
                <button class="btn btn-primary flex-fill" type="submit" data-bs-dismiss="offcanvas">Uygula</button>
                <a class="btn btn-outline-secondary flex-fill" asp-action="List">Sıfırla</a>
            </div>
        </form>
    </div>
</div>

<section class="card-surface">
    <!-- Desktop table -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-sm align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Tarih</th>
                    <th>Sınıf</th>
                    <th>Öğrenci</th>
                    <th>Durum</th>
                    <th>Puan</th>
                    <th class="text-end"></th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items is null || Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var a in Model.Items)
                    {
                        <tr>
                            <td>@a.SessionDate.ToString("dd.MM.yyyy")</td>

                            <td>
                                <a class="text-decoration-none"
                                   asp-controller="Classes" asp-action="Details" asp-route-id="@a.ClassId">
                                    @a.ClassName
                                </a>
                            </td>

                            <td>
                                <a class="text-decoration-none"
                                   asp-controller="Students" asp-action="Details" asp-route-id="@a.StudentId">
                                    @a.StudentFullName
                                </a>
                            </td>

                            <td>
                                <span class="@BadgeClass(a.Status)">@StatusText(a.Status)</span>
                            </td>

                            <td>@(a.Score.HasValue? a.Score.Value.ToString() : "-")</td>

                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-controller="Attendance" asp-action="Session" asp-route-id="@a.ClassSessionId">
                                    Seansa Git
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile cards -->
    <div class="d-md-none">
        @if (Model?.Items is null || Model.Items.Count == 0)
        {
            <div class="text-center text-muted py-4">Kayıt bulunamadı.</div>
        }
        else
        {
            <div class="vstack gap-3 p-3">
                @foreach (var a in Model.Items)
                {
                    <div class="card border shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <div>
                                    <div class="fw-semibold">@a.StudentFullName</div>
                                    <div class="small text-muted">@a.ClassName</div>
                                    <div class="small text-muted">@a.SessionDate.ToString("dd.MM.yyyy")</div>
                                </div>
                                <span class="@BadgeClass(a.Status)">@StatusText(a.Status)</span>
                            </div>

                            <div class="row g-2 mt-2">
                                <div class="col-6">
                                    <div class="small text-muted">Puan</div>
                                    <div>@(a.Score.HasValue? a.Score.Value.ToString() : "-")</div>
                                </div>
                                <div class="col-6">
                                    <div class="small text-muted">Not</div>
                                    <div class="text-truncate">@(!string.IsNullOrWhiteSpace(a.Note) ? a.Note : "-")</div>
                                </div>
                                <div class="col-12">
                                    <div class="small text-muted">Koç Yorumu</div>
                                    <div class="text-truncate">@(!string.IsNullOrWhiteSpace(a.CoachComment) ? a.CoachComment : "-")</div>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-3">
                                <a class="btn btn-outline-secondary"
                                   asp-controller="Students" asp-action="Details" asp-route-id="@a.StudentId">
                                    Öğrenci
                                </a>

                                <a class="btn btn-outline-secondary"
                                   asp-controller="Classes" asp-action="Details" asp-route-id="@a.ClassId">
                                    Sınıf
                                </a>

                                <a class="btn btn-primary"
                                   asp-controller="Attendance" asp-action="Session" asp-route-id="@a.ClassSessionId">
                                    Seansa Git
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@if (Model is not null && Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Sayfalama">
        <ul class="pagination justify-content-center flex-wrap">
            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="List"
                   asp-route-page="@(Model.PageNumber - 1)"
                   asp-route-q="@q"
                   asp-route-status="@statusFilter"
                   asp-route-classId="@classId"
                   asp-route-studentId="@studentId">
                    Önceki
                </a>
            </li>

            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-action="List"
                       asp-route-page="@p"
                       asp-route-q="@q"
                       asp-route-status="@statusFilter"
                       asp-route-classId="@classId"
                       asp-route-studentId="@studentId">
                        @p
                    </a>
                </li>
            }

            <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="List"
                   asp-route-page="@(Model.PageNumber + 1)"
                   asp-route-q="@q"
                   asp-route-status="@statusFilter"
                   asp-route-classId="@classId"
                   asp-route-studentId="@studentId">
                    Sonraki
                </a>
            </li>
        </ul>
    </nav>
}

