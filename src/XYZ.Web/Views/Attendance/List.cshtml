﻿@using XYZ.Domain.Enums
@model XYZ.Web.Models.Attendance.AttendanceListViewModel

@{
    var isStudent = User.IsInRole("Student");
    var isHistoryMode = isStudent || Model.Filter.StudentId.HasValue;

    ViewData["Title"] = isHistoryMode ? "Yoklama Geçmişim" : "Yoklama Listesi";

    int? statusFilter = Model.Filter.Status;

    string StatusText(AttendanceStatus s) => s switch
    {
        AttendanceStatus.Unknown => "Bilinmiyor",
        AttendanceStatus.Present => "Katıldı",
        AttendanceStatus.Absent => "Katılmadı",
        AttendanceStatus.Excused => "İzinli",
        AttendanceStatus.Late => "Geç Kaldı",
        _ => "Bilinmiyor"
    };

    string BadgeClass(AttendanceStatus s) => s switch
    {
        AttendanceStatus.Present => "badge bg-success",
        AttendanceStatus.Absent => "badge bg-danger",
        AttendanceStatus.Excused => "badge bg-secondary",
        AttendanceStatus.Late => "badge bg-warning text-dark",
        _ => "badge bg-light text-dark border"
    };

    string ChipClass(int? v) => statusFilter == v ? "btn btn-sm btn-primary" : "btn btn-sm btn-outline-secondary";
}

<section class="mb-3">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
        <div>
            <h2 class="h4 mb-1">@ViewData["Title"]</h2>
            <div class="text-muted small">
                @if (isHistoryMode)
                {
                    <text>Tüm yoklama kayıtlarınızı burada görebilirsiniz. Duruma göre filtreleyebilirsiniz.</text>
                }
                else
                {
                    <text>Yoklama kayıtlarını filtreleyin ve seansa hızlıca gidin.</text>
                }
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="button"
                    class="btn btn-sm btn-outline-primary d-md-none"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#attListFilters"
                    aria-controls="attListFilters">
                Filtreler
            </button>

            <a asp-action="List" class="btn btn-sm btn-outline-secondary d-none d-md-inline-flex">
                Sıfırla
            </a>
        </div>
    </div>

    <!-- Quick chips: History modda sadece Status -->
    <div class="d-flex flex-wrap gap-2 mt-2">
        <a class="@ChipClass(null)"
           asp-action="List"
           asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)"
           asp-route-status="">
            Tümü
        </a>

        <a class="@ChipClass((int)AttendanceStatus.Present)"
           asp-action="List"
           asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)"
           asp-route-status="@((int)AttendanceStatus.Present)">
            Katıldı
        </a>

        <a class="@ChipClass((int)AttendanceStatus.Absent)"
           asp-action="List"
           asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)"
           asp-route-status="@((int)AttendanceStatus.Absent)">
            Katılmadı
        </a>

        <a class="@ChipClass((int)AttendanceStatus.Excused)"
           asp-action="List"
           asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)"
           asp-route-status="@((int)AttendanceStatus.Excused)">
            İzinli
        </a>

        <a class="@ChipClass((int)AttendanceStatus.Late)"
           asp-action="List"
           asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)"
           asp-route-status="@((int)AttendanceStatus.Late)">
            Geç
        </a>

        <a class="@ChipClass((int)AttendanceStatus.Unknown)"
           asp-action="List"
           asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)"
           asp-route-status="@((int)AttendanceStatus.Unknown)">
            Bilinmiyor
        </a>
    </div>

    <!-- Desktop filter (History modda sade) -->
    <form method="get" class="card-surface mt-3 d-none d-md-block">
        <div class="row g-2 align-items-end">
            <div class="col-md-6">
                <label class="form-label mb-1">Durum</label>
                <select class="form-select" name="status">
                    <option value="" selected=@(statusFilter is null)>Tümü</option>
                    <option value="@((int)AttendanceStatus.Present)" selected=@(statusFilter == (int)AttendanceStatus.Present)>Katıldı</option>
                    <option value="@((int)AttendanceStatus.Absent)" selected=@(statusFilter == (int)AttendanceStatus.Absent)>Katılmadı</option>
                    <option value="@((int)AttendanceStatus.Excused)" selected=@(statusFilter == (int)AttendanceStatus.Excused)>İzinli</option>
                    <option value="@((int)AttendanceStatus.Late)" selected=@(statusFilter == (int)AttendanceStatus.Late)>Geç Kaldı</option>
                    <option value="@((int)AttendanceStatus.Unknown)" selected=@(statusFilter == (int)AttendanceStatus.Unknown)>Bilinmiyor</option>
                </select>
            </div>

            <div class="col-md-6 text-end">
                <button class="btn btn-primary" type="submit">Uygula</button>
                <a class="btn btn-outline-secondary" asp-action="List">Sıfırla</a>
            </div>
        </div>

        @if (!isStudent && Model.Filter.StudentId.HasValue)
        {
            <input type="hidden" name="studentId" value="@Model.Filter.StudentId.Value" />
        }
    </form>
</section>

<!-- Mobile filters -->
<div class="offcanvas offcanvas-bottom" tabindex="-1" id="attListFilters" aria-labelledby="attListFiltersLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="attListFiltersLabel">Filtreler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
    </div>
    <div class="offcanvas-body">
        <form method="get" class="row g-2">
            <div class="col-12">
                <label class="form-label small mb-1">Durum</label>
                <select class="form-select" name="status">
                    <option value="" selected="@(statusFilter is null)">Tümü</option>
                    <option value="@((int)AttendanceStatus.Present)" selected="@(statusFilter == (int)AttendanceStatus.Present)">Katıldı</option>
                    <option value="@((int)AttendanceStatus.Absent)" selected="@(statusFilter == (int)AttendanceStatus.Absent)">Katılmadı</option>
                    <option value="@((int)AttendanceStatus.Excused)" selected="@(statusFilter == (int)AttendanceStatus.Excused)">İzinli</option>
                    <option value="@((int)AttendanceStatus.Late)" selected="@(statusFilter == (int)AttendanceStatus.Late)">Geç Kaldı</option>
                    <option value="@((int)AttendanceStatus.Unknown)" selected="@(statusFilter == (int)AttendanceStatus.Unknown)">Bilinmiyor</option>
                </select>
            </div>

            @if (!isStudent && Model.Filter.StudentId.HasValue)
            {
                <input type="hidden" name="studentId" value="@Model.Filter.StudentId.Value" />
            }

            <div class="col-12 d-flex gap-2 mt-2">
                <button class="btn btn-primary flex-fill" type="submit" data-bs-dismiss="offcanvas">Uygula</button>
                <a class="btn btn-outline-secondary flex-fill" asp-action="List">Sıfırla</a>
            </div>
        </form>
    </div>
</div>

<section class="card-surface">
    <div class="table-responsive">
        <table class="table table-sm align-middle mb-0 table-modern">
            <thead>
                <tr class="text-muted small">
                    <th>Tarih</th>
                    <th>Sınıf</th>
                    @if (!isHistoryMode)
                    {
                        <th>Öğrenci</th>
                    }
                    <th>Durum</th>
                    <th>Puan</th>
                    @if (!isHistoryMode)
                    {
                        <th class="text-end"></th>
                    }
                </tr>
            </thead>

            <tbody>
                @if (Model.Result.Items is null || Model.Result.Items.Count == 0)
                {
                    <tr>
                        <td colspan="@(isHistoryMode ? 4 : 6)" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var a in Model.Result.Items)
                    {
                        <tr>
                            <td>@a.SessionDate.ToString("dd.MM.yyyy")</td>
                            <td>@a.ClassName</td>

                            @if (!isHistoryMode)
                            {
                                <td>@a.StudentFullName</td>
                            }

                            <td><span class="@BadgeClass(a.Status)">@StatusText(a.Status)</span></td>
                            <td>@(a.Score.HasValue? a.Score.Value.ToString() : "-")</td>

                            @if (!isHistoryMode)
                            {
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-controller="Attendance"
                                       asp-action="Session"
                                       asp-route-id="@a.ClassSessionId">
                                        Seansa Git
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>

@if (Model.Result.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Sayfalama">
        <ul class="pagination pagination-modern justify-content-center flex-wrap">
            <li class="page-item @(Model.Result.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="List"
                   asp-route-pageNumber="@(Model.Result.PageNumber - 1)"
                   asp-route-pageSize="@Model.Result.PageSize"
                   asp-route-status="@Model.Filter.Status"
                   asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)">
                    Önceki
                </a>
            </li>

            @for (int p = 1; p <= Model.Result.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Result.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-action="List"
                       asp-route-pageNumber="@p"
                       asp-route-pageSize="@Model.Result.PageSize"
                       asp-route-status="@Model.Filter.Status"
                       asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)">
                        @p
                    </a>
                </li>
            }

            <li class="page-item @(Model.Result.PageNumber >= Model.Result.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="List"
                   asp-route-pageNumber="@(Model.Result.PageNumber + 1)"
                   asp-route-pageSize="@Model.Result.PageSize"
                   asp-route-status="@Model.Filter.Status"
                   asp-route-studentId="@(isStudent ? null : Model.Filter.StudentId)">
                    Sonraki
                </a>
            </li>
        </ul>
    </nav>
}
