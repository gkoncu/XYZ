@model XYZ.Web.Models.DocumentDefinitions.DocumentDefinitionEditViewModel

@{
    ViewData["Title"] = "Yeni Belge Türü";
}

<section class="mb-3 d-flex justify-content-between align-items-center gap-2">
    <div>
        <h2 class="h4 mb-1">Yeni Belge Türü</h2>
        <div class="text-muted small mb-0">Belge türü adını girin ve zorunluluk durumunu belirleyin.</div>
    </div>

    <a class="btn btn-sm btn-outline-secondary"
       asp-action="Index"
       asp-route-target="@Model.Target">
        ← Liste
    </a>
</section>

<section class="card-surface">
    <form method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <input type="hidden" asp-for="Target" />

        <input type="hidden" asp-for="IsActive" />
        <input type="hidden" asp-for="SortOrder" />

        <div class="mb-3">
            <label class="form-label">Ad</label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger small" asp-validation-for="Name"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="IsRequired" />
            <label class="form-check-label" asp-for="IsRequired">Zorunlu</label>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-outline-secondary"
               asp-action="Index"
               asp-route-target="@Model.Target">
                Vazgeç
            </a>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
