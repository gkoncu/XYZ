@model XYZ.Web.Models.DocumentDefinitions.DocumentDefinitionEditViewModel

@{
    ViewData["Title"] = "Belge Türü Düzenle";
}

<h2 class="h4 mb-3">Belge Türü Düzenle</h2>

<form method="post" class="card card-body">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Target" />

    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="row g-2">
        <div class="col-md-4">
            <label class="form-label">Sıra</label>
            <input class="form-control" asp-for="SortOrder" />
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsRequired" />
                <label class="form-check-label" asp-for="IsRequired">Zorunlu</label>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive">Aktif</label>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-end gap-2">
        <a class="btn btn-outline-secondary"
           asp-action="Index"
           asp-route-target="@Model.Target"
           asp-route-includeInactive="true">
            Geri
        </a>
        <button class="btn btn-primary" type="submit">Kaydet</button>
    </div>
</form>
