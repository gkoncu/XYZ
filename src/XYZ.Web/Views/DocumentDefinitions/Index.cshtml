@model XYZ.Web.Models.DocumentDefinitions.DocumentDefinitionsIndexViewModel

@{
    ViewData["Title"] = "Belge Türleri";
    var target = Model.Target;
}

<section class="mb-3 d-flex justify-content-between align-items-center gap-2">
    <div>
        <h2 class="h4 mb-1">Belge Türleri</h2>
        <div class="text-muted small mb-0">Kulüp için gerekli belge türlerini yönetin.</div>
    </div>

    <a class="btn btn-sm btn-primary"
       asp-action="Create"
       asp-route-target="@target">
        + Yeni Belge Türü
    </a>
</section>

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @(target == 1 ? "active" : "")"
           asp-action="Index"
           asp-route-target="1">
            Öğrenci Belgeleri
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(target == 2 ? "active" : "")"
           asp-action="Index"
           asp-route-target="2">
            Koç Belgeleri
        </a>
    </li>
</ul>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success py-2 small">@ok</div>
}
@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger py-2 small">@err</div>
}

<section class="card-surface">
    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle mb-0">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th class="text-center">Zorunlu</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items is null || Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">Tanım bulunamadı.</td>
                    </tr>
                }
                else
                {
                    foreach (var d in Model.Items)
                    {
                        <tr>
                            <td class="fw-semibold">@d.Name</td>
                            <td class="text-center">
                                @if (d.IsRequired)
                                {
                                    <span class="badge-soft badge-soft-warning">Zorunlu</span>
                                }
                                else
                                {
                                    <span class="badge-soft badge-soft-muted">Opsiyonel</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-light"
                                       asp-action="Edit"
                                       asp-route-id="@d.Id"
                                       asp-route-target="@target">
                                        Düzenle
                                    </a>

                                    <form method="post" class="d-inline" asp-action="Delete">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@d.Id" />
                                        <input type="hidden" name="target" value="@target" />

                                        <button type="submit" class="btn btn-outline-danger"
                                                onclick="return confirm('Belge türü silinsin mi?');">
                                            Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile -->
    <div class="d-md-none vstack gap-3">
        @if (Model.Items is null || Model.Items.Count == 0)
        {
            <div class="text-center text-muted py-4">Tanım bulunamadı.</div>
        }
        else
        {
            @foreach (var d in Model.Items)
            {
                <div class="card-surface">
                    <div class="d-flex justify-content-between align-items-start gap-2">
                        <div>
                            <div class="fw-semibold">@d.Name</div>
                            <div class="mt-1">
                                @if (d.IsRequired)
                                {
                                    <span class="badge-soft badge-soft-warning">Zorunlu</span>
                                }
                                else
                                {
                                    <span class="badge-soft badge-soft-muted">Opsiyonel</span>
                                }
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a class="btn btn-sm btn-outline-light"
                               asp-action="Edit"
                               asp-route-id="@d.Id"
                               asp-route-target="@target">
                                Düzenle
                            </a>

                            <form method="post" asp-action="Delete">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@d.Id" />
                                <input type="hidden" name="target" value="@target" />
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                        onclick="return confirm('Belge türü silinsin mi?');">
                                    Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
