@model XYZ.Web.Models.DocumentDefinitions.DocumentDefinitionsIndexViewModel

@{
    ViewData["Title"] = "Belge Türleri";
    var target = Model.Target;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Belge Türleri</h2>

    <a class="btn btn-sm btn-primary"
       asp-action="Create"
       asp-route-target="@target">
        + Yeni Belge Türü
    </a>
</div>

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @(target == 1 ? "active" : "")"
           asp-action="Index"
           asp-route-target="1"
           asp-route-includeInactive="@Model.IncludeInactive">
            Öğrenci Belgeleri
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(target == 2 ? "active" : "")"
           asp-action="Index"
           asp-route-target="2"
           asp-route-includeInactive="@Model.IncludeInactive">
            Koç Belgeleri
        </a>
    </li>
</ul>

<form method="get" class="card card-body mb-3">
    <input type="hidden" name="target" value="@target" />
    <div class="d-flex justify-content-between align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="includeInactive" value="true" id="includeInactive"
                   @(Model.IncludeInactive ? "checked" : "") />
            <label class="form-check-label" for="includeInactive">Pasifleri de göster</label>
        </div>
        <button class="btn btn-outline-primary btn-sm" type="submit">Uygula</button>
    </div>
</form>

<div class="card">
    <div class="table-responsive">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th class="text-center">Zorunlu</th>
                    <th class="text-center">Aktif</th>
                    <th class="text-center">Sıra</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items is null || Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">Tanım bulunamadı.</td>
                    </tr>
                }
                else
                {
                    foreach (var d in Model.Items)
                    {
                        <tr>
                            <td>@d.Name</td>
                            <td class="text-center">
                                @if (d.IsRequired)
                                {
                                    <span class="badge bg-warning text-dark">Zorunlu</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Opsiyonel</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (d.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-center">@d.SortOrder</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Edit"
                                   asp-route-id="@d.Id"
                                   asp-route-target="@target">
                                    Düzenle
                                </a>

                                <form method="post" class="d-inline" asp-action="Delete">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.Id" />
                                    <input type="hidden" name="target" value="@target" />

                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Belge türü silinsin mi?');">
                                        Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
