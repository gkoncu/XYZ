﻿@using XYZ.Application.Features.Branches.Queries.GetBranchById
@model BranchDetailDto

@{
    ViewData["Title"] = "Şube Detay";

    var isSuperAdmin = User.IsInRole("SuperAdmin");
    var canEdit = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
}

<section class="mb-3">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
        <div>
            <h2 class="h4 mb-1">@Model.Name</h2>
            <div class="text-muted small">Şube Id: @Model.Id</div>
        </div>

        <!-- Desktop actions -->
        <div class="d-none d-md-flex gap-2">
            @if (canEdit)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">
                    Düzenle
                </a>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Şube silinsin mi?');">
                        Sil
                    </button>
                </form>
            }

            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                Liste
            </a>
        </div>
    </div>
</section>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success py-2 small">@ok</div>
}
@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger py-2 small">@err</div>
}

<!-- Mobile quick actions -->
<section class="card-surface mb-3 d-md-none">
    <div class="card-body">
        <div class="fw-semibold mb-2">Hızlı İşlemler</div>

        <div class="d-grid gap-2">
            <a asp-controller="Classes"
               asp-action="Index"
               asp-route-branchId="@Model.Id"
               class="btn btn-outline-primary">
                Şubedeki Sınıflar
            </a>

            <a asp-controller="Classes"
               asp-action="Create"
               class="btn btn-outline-primary @(canEdit ? "" : "disabled")"
               aria-disabled=@(canEdit ? "false" : "true")>
                Yeni Sınıf Oluştur
            </a>

            <a asp-controller="Students"
               asp-action="Index"
               class="btn btn-outline-primary">
                Öğrenciler
            </a>

            <a asp-controller="Coaches"
               asp-action="Index"
               class="btn btn-outline-primary">
                Koçlar
            </a>

            <a asp-action="Index" class="btn btn-outline-secondary">
                Şube Listesi
            </a>
        </div>

        @if (canEdit)
        {
            <hr class="my-3" />
            <div class="d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                    Düzenle
                </a>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-danger w-100"
                            onclick="return confirm('Şube silinsin mi?');">
                        Sil
                    </button>
                </form>
            </div>
        }
    </div>
</section>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">Bilgiler</div>

            <div class="small text-muted">Sınıf Sayısı: @Model.ClassCount</div>
            <div class="small text-muted">Oluşturma: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>

            <div class="mt-2">
                @if (Model.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-muted">Pasif</span>
                }
            </div>

            <!-- Desktop quick links -->
            <div class="mt-3 d-none d-md-flex flex-wrap gap-2">
                <a asp-controller="Classes"
                   asp-action="Index"
                   asp-route-branchId="@Model.Id"
                   class="btn btn-sm btn-outline-primary">
                    Şubedeki Sınıflar
                </a>

                <a asp-controller="Students"
                   asp-action="Index"
                   class="btn btn-sm btn-outline-primary">
                    Öğrenciler
                </a>

                <a asp-controller="Coaches"
                   asp-action="Index"
                   class="btn btn-sm btn-outline-primary">
                    Koçlar
                </a>

                @if (canEdit)
                {
                    <a asp-controller="Classes"
                       asp-action="Create"
                       class="btn btn-sm btn-primary">
                        Yeni Sınıf Oluştur
                    </a>
                }
            </div>
        </div>
    </div>

    @if (isSuperAdmin)
    {
        <div class="col-md-6">
            <div class="card-surface p-3">
                <div class="fw-semibold mb-2">Kulüp</div>
                <div class="small text-muted">@Model.TenantName</div>
                <div class="small text-muted">Kulüp Id: @Model.TenantId</div>
            </div>
        </div>
    }
</div>

@if (canEdit)
{
    <!-- Mobile sticky action bar (admin only) -->
    <div class="d-md-none position-sticky bottom-0 start-0 end-0 bg-white border-top mt-4" style="z-index: 1020;">
        <div class="container-fluid py-2">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary flex-fill">Düzenle</a>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="flex-fill">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-danger w-100"
                            onclick="return confirm('Şube silinsin mi?');">
                        Sil
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-outline-secondary">Liste</a>
            </div>
        </div>
    </div>
}
