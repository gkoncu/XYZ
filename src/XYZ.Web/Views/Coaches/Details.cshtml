@using XYZ.Application.Features.Coaches.Queries.GetAllCoaches
@model CoachDetailDto

@{
    ViewData["Title"] = "Koç Detayı";
}

<section class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Index" class="text-muted small text-decoration-none">&larr; Koç listesine dön</a>

    <div>
        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <a asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-sm btn-outline-light me-1">
                Düzenle
            </a>

            <form asp-action="Delete"
                  asp-route-id="@Model.Id"
                  method="post"
                  class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="btn btn-sm btn-outline-danger"
                        onclick="return confirm('Bu koçu silmek istediğinize emin misiniz?');">
                    Sil
                </button>
            </form>
        }
    </div>
</section>

<section class="detail-grid">
    <div class="detail-card">
        <h2 class="h5 mb-3">@Model.FullName</h2>

        <dl class="row mb-0">
            <dt class="col-sm-3">E-posta</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Cinsiyet</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">Kan Grubu</dt>
            <dd class="col-sm-9">@Model.BloodType</dd>

            <dt class="col-sm-3">Doğum Tarihi</dt>
            <dd class="col-sm-9">@Model.BirthDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Branş</dt>
            <dd class="col-sm-9">@Model.BranchName</dd>

            <dt class="col-sm-3">T.C. Kimlik No</dt>
            <dd class="col-sm-9">@Model.IdentityNumber</dd>

            <dt class="col-sm-3">Lisans No</dt>
            <dd class="col-sm-9">@Model.LicenseNumber</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-secondary">Pasif</span>
                }
            </dd>
        </dl>
    </div>

    <div class="detail-card">
        <h3 class="h6 mb-2">Sınıflar</h3>

        @if (Model.Classes == null || Model.Classes.Count == 0)
        {
            <p class="text-muted small mb-0">Koça atanmış sınıf bulunmuyor.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-borderless align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sınıf</th>
                            <th>Branş</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cls in Model.Classes)
                        {
                            <tr>
                                <td>@cls.Id</td>
                                <td>@cls.FullName</td>
                                <td>@cls.BranchName</td>
                                <td>
                                    @if (cls.IsActive)
                                    {
                                        <span class="badge-soft badge-soft-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge-soft badge-soft-secondary">Pasif</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>

