@using XYZ.Application.Features.Coaches.Queries.GetCoachById
@model CoachDetailDto

@{
    ViewData["Title"] = "Koç Detayı";
}

<section class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Index" class="text-muted small text-decoration-none">&larr; Koç listesine dön</a>

    <div>
        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <a asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-sm btn-outline-light me-1">
                Düzenle
            </a>

            <form asp-action="Delete"
                  asp-route-id="@Model.Id"
                  method="post"
                  class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="btn btn-sm btn-outline-danger"
                        onclick="return confirm('Bu koçu silmek istediğinize emin misiniz?');">
                    Sil
                </button>
            </form>
        }
    </div>
</section>

<section class="detail-grid">
    <div class="detail-card">
        <h2 class="h5 mb-3">@Model.FullName</h2>

        <dl class="row mb-0">
            <dt class="col-sm-3">E-posta</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Branş</dt>
            <dd class="col-sm-9">@Model.Branch</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-secondary">Pasif</span>
                }
            </dd>
        </dl>
    </div>

    <div class="detail-card">
        <h3 class="h6 mb-2">Hakkında</h3>
        @if (!string.IsNullOrWhiteSpace(Model.Bio))
        {
            <p class="mb-0">@Model.Bio</p>
        }
        else
        {
            <p class="text-muted small mb-0">Koç hakkında ek bilgi girilmemiş.</p>
        }
    </div>

    <div class="detail-card">
        <h3 class="h6 mb-2">Notlar</h3>
        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <p class="mb-0">@Model.Notes</p>
        }
        else
        {
            <p class="text-muted small mb-0">Not bulunmuyor.</p>
        }
    </div>
</section>
