@model PaginationResult<StudentListItemDto>
@{
    ViewData["Title"] = "Gelişim Kayıtları";
    var searchTerm = ViewBag.SearchTerm as string;
    var isSuperAdmin = User.IsInRole("SuperAdmin");
}

<section class="mb-3">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-2">
        <div>
            <h2 class="h4 mb-1">Gelişim Kayıtları</h2>
            <p class="text-muted small mb-0">
                Öğrenci seçin ve gelişim kayıtlarını görüntüleyin / yönetin.
            </p>
        </div>

        <div class="small text-muted">
            Toplam @Model.TotalCount kayıt · Sayfa @Model.PageNumber / @Model.TotalPages
        </div>
    </div>

    <div class="students-toolbar">
        <form asp-action="Index" asp-controller="ProgressRecords" method="get" class="d-flex students-search">
            <input type="text"
                   name="searchTerm"
                   value="@searchTerm"
                   class="form-control form-control-sm me-2"
                   placeholder="Öğrenci adı@(isSuperAdmin ? ", kulüp" : "") ile ara..." />
            <button type="submit" class="btn btn-sm btn-outline-light">
                Ara
            </button>
        </form>

        <a asp-controller="Students" asp-action="Index" class="btn btn-sm btn-outline-secondary">
            Öğrenciler
        </a>
    </div>
</section>

<section class="card-surface">
    <!-- Desktop table -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle mb-0">
            <thead>
                <tr>
                    <th>Öğrenci</th>
                    @if (isSuperAdmin)
                    {
                        <th>Kulüp</th>
                    }
                    <th>Sınıf</th>
                    <th>Şube</th>
                    <th>Durum</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan=@(isSuperAdmin ? 6 : 5) class="text-center text-muted py-4">
                            Kriterlere uygun öğrenci bulunamadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var s in Model.Items)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@s.FullName</div>
                                <div class="small text-muted">@s.Email</div>
                                @if (!string.IsNullOrWhiteSpace(s.PhoneNumber))
                                {
                                    <div class="small text-muted">@s.PhoneNumber</div>
                                }
                            </td>

                            @if (isSuperAdmin)
                            {
                                <td>@s.TenantName</td>
                            }

                            <td>
                                @if (s.ClassId.HasValue)
                                {
                                    <span>@s.ClassName</span>
                                }
                                else
                                {
                                    <span class="text-muted small">Henüz atanmadı</span>
                                }
                            </td>

                            <td>
                                @if (!string.IsNullOrWhiteSpace(s.BranchName))
                                {
                                    <span>@s.BranchName</span>
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>

                            <td>
                                @if (s.IsActive)
                                {
                                    <span class="badge-soft badge-soft-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge-soft badge-soft-muted">Pasif</span>
                                }
                            </td>

                            <td class="text-end">
                                <a asp-controller="ProgressRecords"
                                   asp-action="Student"
                                   asp-route-studentId="@s.Id"
                                   class="btn btn-sm btn-outline-light">
                                    Gelişim
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile cards -->
    <div class="d-md-none">
        @if (Model.Items.Count == 0)
        {
            <div class="text-center text-muted py-4">Kriterlere uygun öğrenci bulunamadı.</div>
        }
        else
        {
            <div class="vstack gap-3">
                @foreach (var s in Model.Items)
                {
                    <div class="card border shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <div>
                                    <div class="fw-semibold">@s.FullName</div>
                                    <div class="small text-muted">@s.Email</div>
                                    @if (!string.IsNullOrWhiteSpace(s.PhoneNumber))
                                    {
                                        <div class="small text-muted">@s.PhoneNumber</div>
                                    }
                                </div>
                                @if (s.IsActive)
                                {
                                    <span class="badge-soft badge-soft-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge-soft badge-soft-muted">Pasif</span>
                                }
                            </div>

                            <div class="row g-2 mt-2">
                                <div class="col-6">
                                    <div class="small text-muted">Sınıf</div>
                                    <div>@(s.ClassId.HasValue ? s.ClassName : "Henüz atanmadı")</div>
                                </div>
                                <div class="col-6">
                                    <div class="small text-muted">Şube</div>
                                    <div>@(!string.IsNullOrWhiteSpace(s.BranchName) ? s.BranchName : "-")</div>
                                </div>
                                @if (isSuperAdmin)
                                {
                                    <div class="col-12">
                                        <div class="small text-muted">Kulüp</div>
                                        <div>@s.TenantName</div>
                                    </div>
                                }
                            </div>

                            <div class="d-grid mt-3">
                                <a asp-controller="ProgressRecords"
                                   asp-action="Student"
                                   asp-route-studentId="@s.Id"
                                   class="btn btn-primary">
                                    Gelişim Kayıtları
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Sayfalama">
        <ul class="pagination justify-content-end mb-0">
            @{
                var prevDisabled = Model.PageNumber <= 1 ? "disabled" : "";
                var nextDisabled = Model.PageNumber >= Model.TotalPages ? "disabled" : "";
            }
            <li class="page-item @prevDisabled">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-searchTerm="@searchTerm">
                    Önceki
                </a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                var active = i == Model.PageNumber ? "active" : "";
                <li class="page-item @active">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-searchTerm="@searchTerm">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @nextDisabled">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-searchTerm="@searchTerm">
                    Sonraki
                </a>
            </li>
        </ul>
    </nav>
}
