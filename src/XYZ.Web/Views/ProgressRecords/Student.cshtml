@model XYZ.Web.Models.ProgressRecords.StudentProgressRecordsViewModel

@{
    ViewData["Title"] = "Gelişim Kayıtları";
}

<section class="mb-3 d-flex flex-wrap justify-content-between align-items-center gap-2">
    <div>
        <h2 class="h4 mb-1">Gelişim Kayıtları</h2>
        <div class="text-muted small">
            Öğrenci: <span>@Model.StudentFullName</span> · ID: @Model.StudentId
        </div>
    </div>

    @if (Model.CanWrite)
    {
        <div class="d-flex gap-2">
            <a class="btn btn-sm btn-primary"
               asp-action="Create"
               asp-route-studentId="@Model.StudentId">
                + Yeni Kayıt
            </a>
        </div>
    }
</section>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success py-2 small">@ok</div>
}
@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger py-2 small">@err</div>
}

<section class="card-surface p-3 mb-3">
    <form method="get" class="row g-2 align-items-end">
        <input type="hidden" name="studentId" value="@Model.StudentId" />

        <div class="col-md-4">
            <label class="form-label small">Şube</label>
            <select class="form-select form-select-sm" name="branchId">
                <option value="">(Tümü)</option>
                @foreach (var b in Model.BranchOptions)
                {
                    <option value="@b.Id" selected=@(Model.BranchId == b.Id)>
                        @b.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label small">Başlangıç</label>
            <input type="date" class="form-control form-control-sm" name="from"
                   value="@(Model.From.HasValue? Model.From.Value.ToString("yyyy-MM-dd") : "")" />
        </div>

        <div class="col-md-3">
            <label class="form-label small">Bitiş</label>
            <input type="date" class="form-control form-control-sm" name="to"
                   value="@(Model.To.HasValue? Model.To.Value.ToString("yyyy-MM-dd") : "")" />
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-sm btn-outline-secondary">Filtrele</button>
        </div>
    </form>
</section>

<section class="card-surface p-3">
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr class="text-muted small">
                    <th>Tarih</th>
                    <th>#</th>
                    <th>Şube</th>
                    <th>Oluşturan</th>
                    <th class="text-end">Metrik</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-muted small">Kayıt bulunamadı.</td>
                    </tr>
                }
                else
                {
                    foreach (var x in Model.Items)
                    {
                        <tr>
                            <td class="small">@x.RecordDate.ToString("dd.MM.yyyy")</td>
                            <td class="small">@x.Sequence</td>
                            <td class="small">@(!string.IsNullOrWhiteSpace(x.BranchName) ? x.BranchName : x.BranchId.ToString())</td>
                            <td class="small">@(!string.IsNullOrWhiteSpace(x.CreatedByDisplayName) ? x.CreatedByDisplayName : "-")</td>
                            <td class="small text-end">@x.FilledMetricsCount</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-action="Details" asp-route-id="@x.Id">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>
