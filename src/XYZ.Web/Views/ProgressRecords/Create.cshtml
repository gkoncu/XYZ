@model XYZ.Web.Models.ProgressRecords.ProgressRecordCreateViewModel

@{
    ViewData["Title"] = "Gelişim Kaydı Ekle";
}

<h2 class="h4 mb-3">Gelişim Kaydı Ekle</h2>
<div class="text-muted small mb-3">Öğrenci: <span class="fw-semibold">@Model.StudentFullName</span></div>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="StudentFullName" />

    <div class="col-md-4">
        <label asp-for="RecordDate" class="form-label small"></label>
        <input asp-for="RecordDate" type="date" class="form-control form-control-sm" />
        <span asp-validation-for="RecordDate" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Height" class="form-label small"></label>
        <input asp-for="Height" class="form-control form-control-sm" />
        <span asp-validation-for="Height" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Weight" class="form-label small"></label>
        <input asp-for="Weight" class="form-control form-control-sm" />
        <span asp-validation-for="Weight" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="BodyFatPercentage" class="form-label small"></label>
        <input asp-for="BodyFatPercentage" class="form-control form-control-sm" />
    </div>

    <div class="col-md-4">
        <label asp-for="VerticalJump" class="form-label small"></label>
        <input asp-for="VerticalJump" class="form-control form-control-sm" />
    </div>

    <div class="col-md-4">
        <label asp-for="SprintTime" class="form-label small"></label>
        <input asp-for="SprintTime" class="form-control form-control-sm" />
    </div>

    <div class="col-md-4">
        <label asp-for="Endurance" class="form-label small"></label>
        <input asp-for="Endurance" class="form-control form-control-sm" />
    </div>

    <div class="col-md-4">
        <label asp-for="Flexibility" class="form-label small"></label>
        <input asp-for="Flexibility" class="form-control form-control-sm" />
    </div>

    <div class="col-md-3">
        <label asp-for="TechnicalScore" class="form-label small"></label>
        <input asp-for="TechnicalScore" class="form-control form-control-sm" />
    </div>

    <div class="col-md-3">
        <label asp-for="TacticalScore" class="form-label small"></label>
        <input asp-for="TacticalScore" class="form-control form-control-sm" />
    </div>

    <div class="col-md-3">
        <label asp-for="PhysicalScore" class="form-label small"></label>
        <input asp-for="PhysicalScore" class="form-control form-control-sm" />
    </div>

    <div class="col-md-3">
        <label asp-for="MentalScore" class="form-label small"></label>
        <input asp-for="MentalScore" class="form-control form-control-sm" />
    </div>

    <div class="col-12">
        <label asp-for="CoachNotes" class="form-label small"></label>
        <textarea asp-for="CoachNotes" rows="3" class="form-control form-control-sm"></textarea>
    </div>

    <div class="col-12">
        <label asp-for="Goals" class="form-label small"></label>
        <textarea asp-for="Goals" rows="3" class="form-control form-control-sm"></textarea>
    </div>

    <div class="col-12 d-flex justify-content-end mt-2">
        <a class="btn btn-sm btn-outline-light me-2"
           asp-action="Student"
           asp-route-studentId="@Model.StudentId">İptal</a>
        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
    </div>
</form>
