@using XYZ.Application.Features.Tenants.Queries.GetAllTenants
@model PaginationResult<TenantListItemDto>
@{
    ViewData["Title"] = "Tenants";
    var searchTerm = ViewBag.SearchTerm as string;
}

<section class="mb-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <h2 class="h4 mb-1">Tenant'lar</h2>
            <p class="text-muted small mb-0">
                Sistemdeki tüm tenant kayıtları (SuperAdmin).
            </p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-sm btn-primary">+ Yeni Tenant</a>
        </div>
    </div>

    <div class="students-toolbar">
        <form asp-action="Index" method="get" class="d-flex students-search">
            <input type="text"
                   name="searchTerm"
                   value="@searchTerm"
                   class="form-control form-control-sm me-2"
                   placeholder="Tenant adı veya subdomain ile ara..." />
            <button type="submit" class="btn btn-sm btn-outline-light">Ara</button>
        </form>
        <div class="small text-muted">
            Toplam @Model.TotalCount kayıt · Sayfa @Model.PageNumber / @Model.TotalPages
        </div>
    </div>

    <div class="card-surface">
        <div class="table-responsive">
            <table class="table table-modern align-middle mb-0">
                <thead>
                    <tr>
                        <th>Tenant</th>
                        <th>Plan</th>
                        <th>Dönem</th>
                        <th>Durum</th>
                        <th class="text-end">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                Kriterlere uygun tenant bulunamadı.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var t in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@t.Name</div>
                                    <div class="small text-muted">@t.Subdomain</div>
                                    <div class="small text-muted">
                                        Branch: @t.ActiveBranchCount · Class: @t.ActiveClassCount · Student: @t.ActiveStudentCount · Coach: @t.ActiveCoachCount
                                    </div>
                                </td>
                                <td>
                                    <span>@t.SubscriptionPlan</span>
                                </td>
                                <td>
                                    <div class="small text-muted">@t.SubscriptionStartDate.ToString("yyyy-MM-dd")</div>
                                    <div class="small text-muted">@t.SubscriptionEndDate.ToString("yyyy-MM-dd")</div>
                                </td>
                                <td>
                                    @if (t.IsActive)
                                    {
                                        <span class="badge-soft badge-soft-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge-soft badge-soft-muted">Pasif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-outline-light me-1">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-light">Düzenle</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination pagination-modern justify-content-end mb-0">
                    @{
                        var prevDisabled = Model.PageNumber <= 1 ? "disabled" : "";
                        var nextDisabled = Model.PageNumber >= Model.TotalPages ? "disabled" : "";
                    }
                    <li class="page-item @prevDisabled">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-searchTerm="@searchTerm">Önceki</a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        var active = i == Model.PageNumber ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-searchTerm="@searchTerm">@i</a>
                        </li>
                    }

                    <li class="page-item @nextDisabled">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-searchTerm="@searchTerm">Sonraki</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>
