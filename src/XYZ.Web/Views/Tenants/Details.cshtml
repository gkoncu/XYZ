@model XYZ.Web.Models.Tenants.TenantDetailsViewModel
@{
    ViewData["Title"] = "Kulüp Detay";
    var kulupAdi = Model.Tenant.Name;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="h4 mb-1">@Model.Tenant.Name</h2>
        <div class="text-muted small">@Model.Tenant.Subdomain</div>
    </div>
    <div>
        <form asp-action="SwitchContext" asp-route-id="@Model.Tenant.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit"
                    class="btn btn-sm btn-outline-warning me-1"
                    title="SuperAdmin bağlı olduğu kulübü değiştir">
                Switch
            </button>
        </form>
        <a asp-action="Edit" asp-route-id="@Model.Tenant.Id" class="btn btn-sm btn-outline-light me-1">Düzenle</a>

        <form asp-action="Delete" asp-route-id="@Model.Tenant.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit"
                    class="btn btn-sm btn-outline-danger"
                    onclick="return confirm('Kulüp silinsin mi? (IsActive=false)');">
                Sil
            </button>
        </form>

        <a asp-action="Index" class="btn btn-sm btn-outline-light ms-1">Liste</a>
    </div>
</div>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success py-2 small">@ok</div>
}
@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger py-2 small">@err</div>
}

<div class="row g-3">
    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">İletişim</div>
            <div class="small text-muted">E-posta: @Model.Tenant.Email</div>
            <div class="small text-muted">Telefon: @Model.Tenant.Phone</div>
            <div class="small text-muted">Adres: @Model.Tenant.Address</div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">Abonelik</div>
            <div class="small text-muted">Plan: @Model.Tenant.SubscriptionPlan</div>
            <div class="small text-muted">Başlangıç: @Model.Tenant.SubscriptionStartDate.ToString("yyyy-MM-dd")</div>
            <div class="small text-muted">Bitiş: @Model.Tenant.SubscriptionEndDate.ToString("yyyy-MM-dd")</div>
            <div class="mt-2">
                @if (Model.Tenant.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-muted">Pasif</span>
                }
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">Özet</div>
            <div class="small text-muted">
                Şube: @Model.Tenant.ActiveBranchCount · Sınıf: @Model.Tenant.ActiveClassCount · Öğrenci: @Model.Tenant.ActiveStudentCount · Koç: @Model.Tenant.ActiveCoachCount
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">Kısayollar</div>
            <div class="small text-muted mb-3">
                Aşağıdaki bağlantılar, ilgili listeleri açar ve arama kutusunu kulüp adıyla doldurarak bu kulübe göre filtrelemenizi sağlar.
            </div>

            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-sm btn-outline-light"
                   asp-controller="Students"
                   asp-action="Index"
                   asp-route-searchTerm="@kulupAdi">
                    Öğrenciler
                </a>

                <a class="btn btn-sm btn-outline-light"
                   asp-controller="Coaches"
                   asp-action="Index"
                   asp-route-searchTerm="@kulupAdi">
                    Koçlar
                </a>

                <a class="btn btn-sm btn-outline-light"
                   asp-controller="Admins"
                   asp-action="Index"
                   asp-route-searchTerm="@kulupAdi">
                    Adminler
                </a>
            </div>
        </div>
    </div>
</div>
