@using XYZ.Application.Features.Tenants.Queries.GetTenantsById
@model TenantDetailDto
@{
    ViewData["Title"] = "Tenant Detay";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="h4 mb-1">@Model.Name</h2>
        <div class="text-muted small">@Model.Subdomain</div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-light me-1">Düzenle</a>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit"
                    class="btn btn-sm btn-outline-danger"
                    onclick="return confirm('Tenant silinsin mi? (IsActive=false)');">
                Sil
            </button>
        </form>

        <a asp-action="Index" class="btn btn-sm btn-outline-light ms-1">Liste</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">İletişim</div>
            <div class="small text-muted">Email: @Model.Email</div>
            <div class="small text-muted">Phone: @Model.Phone</div>
            <div class="small text-muted">Address: @Model.Address</div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">Abonelik</div>
            <div class="small text-muted">Plan: @Model.SubscriptionPlan</div>
            <div class="small text-muted">Start: @Model.SubscriptionStartDate.ToString("yyyy-MM-dd")</div>
            <div class="small text-muted">End: @Model.SubscriptionEndDate.ToString("yyyy-MM-dd")</div>
            <div class="mt-2">
                @if (Model.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-muted">Pasif</span>
                }
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card-surface p-3">
            <div class="fw-semibold mb-2">Özet</div>
            <div class="small text-muted">
                Branch: @Model.ActiveBranchCount · Class: @Model.ActiveClassCount · Student: @Model.ActiveStudentCount · Coach: @Model.ActiveCoachCount
            </div>
        </div>
    </div>
</div>
