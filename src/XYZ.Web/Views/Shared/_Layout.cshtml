﻿﻿﻿@using System
@using System.Linq
@{
    var primaryColor = ViewData["PrimaryColor"] as string ?? "#3B82F6";
    var secondaryColor = ViewData["SecondaryColor"] as string ?? "#1E40AF";
    var tenantName = ViewData["TenantName"] as string ?? "XYZ Club";
    var logoUrl = ViewData["LogoUrl"] as string;

    var dashboardController =
        (User?.IsInRole("SuperAdmin") ?? false) ? "SuperAdminDashboard" :
        (User?.IsInRole("Admin") ?? false) ? "AdminDashboard" :
        (User?.IsInRole("Coach") ?? false) ? "CoachDashboard" :
        (User?.IsInRole("Student") ?? false) ? "StudentDashboard" :
        "Home";

    var displayName = (User?.Identity?.IsAuthenticated ?? false)
        ? (User?.Identity?.Name ?? "Kullanıcı")
        : "Guest";

    string BuildInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
                        .Take(2)
                        .ToArray();
        if (parts.Length == 0) return "?";
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpperInvariant();
        return (parts[0].Substring(0, 1) + parts[1].Substring(0, 1)).ToUpperInvariant();
    }

    var initials = (User?.Identity?.IsAuthenticated ?? false) ? BuildInitials(displayName) : "?";

    var profilePictureUrl =
    (ViewData["ProfilePictureUrl"] as string)
    ?? Context.Request.Cookies["xyz_pp_url"];
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @tenantName</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XYZ.Web.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body class="app-shell" style="--primary-color:@primaryColor; --secondary-color:@secondaryColor;">
    <header class="app-header shadow-sm">
        <nav class="navbar navbar-expand-lg app-navbar">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="@dashboardController" asp-action="Index">
                    @if (!string.IsNullOrEmpty(logoUrl))
                    {
                        <img src="@logoUrl" alt="@tenantName logo" class="club-logo img-fluid" />
                    }
                    else
                    {
                        <div class="club-logo-placeholder">
                            <span>@tenantName.Substring(0, 1)</span>
                        </div>
                    }
                    <span class="fw-semibold">@tenantName</span>
                </a>

                <button class="navbar-toggler text-white" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 app-nav-links">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="@dashboardController" asp-action="Index">Dashboard</a>
                        </li>

                        @* =====================================================
                           Admin / Coach / SuperAdmin Menüsü
                           ===================================================== *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Coach") || User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Operasyon
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Students" asp-action="Index">Öğrenciler</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Classes" asp-action="Index">Sınıflar</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ClassSessions" asp-action="Index">Antrenmanlar</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Attendance" asp-action="Index">Yoklama</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Payments" asp-action="Index">Aidatlar</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ProgressRecords" asp-action="Index">Gelişim Kayıtları</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Belgeler
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Documents"
                                           asp-action="Students"
                                           asp-route-onlyIncomplete="true">
                                            Öğrenci Belgeleri (Eksikler)
                                        </a>
                                    </li>

                                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                    {
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Documents"
                                               asp-action="Coaches"
                                               asp-route-onlyIncomplete="true">
                                                Koç Belgeleri (Eksikler)
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="DocumentDefinitions"
                                               asp-action="Index">
                                                Belge Tanımları
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Kulüp
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Branches" asp-action="Index">Şubeler</a>
                                    </li>

                                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Coaches" asp-action="Index">Koçlar</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admins" asp-action="Index">Adminler</a>
                                        </li>
                                    }

                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Tenants" asp-action="Index">Kulüpler</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        @* =====================================================
                           Student Menüsü
                           ===================================================== *@
                        else if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Attendance" asp-action="List">Yoklama Geçmişim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Payments" asp-action="My">Aidatlarım</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PaymentPlans" asp-action="My">Aidat Planım</a>
                            </li>
                        }


                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Announcements" asp-action="Index">Duyurular</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="dropdown">
                                <a class="d-flex align-items-center gap-2 text-decoration-none dropdown-toggle"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                                   style="color: rgba(255,255,255,.85);">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center border"
                                          style="width:34px;height:34px;overflow:hidden;background:rgba(255,255,255,.12);">
                                        @if (!string.IsNullOrWhiteSpace(profilePictureUrl))
                                        {
                                            <img src="@profilePictureUrl" alt="Profil" style="width:34px;height:34px;object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <span class="fw-semibold" style="letter-spacing:.5px;">@initials</span>
                                        }
                                    </span>

                                    <span class="d-none d-lg-inline text-end">
                                        <span class="d-block small" style="line-height:1.1;">@displayName</span>
                                        <span class="d-block small text-white-50" style="line-height:1.1;">
                                            @string.Join(" / ",
                                            User.Claims
                                            .Where(c => c.Type == "role" || c.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role")
                                            .Select(c => c.Value))
                                    </span>
                                </span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        Profilim
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Settings" asp-action="Index">Ayarlar</a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                            Çıkış
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                                                }
                        else
                        {
                            <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Login">Giriş</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="app-content">
        <main role="main" class="app-main container-fluid py-4">
            @{
                var devSetupUrl = TempData["DevPasswordSetupUrl"] as string;
                var devPasswordUserId = TempData["DevPasswordUserId"] as string;
            }

            @if (!string.IsNullOrWhiteSpace(devSetupUrl))
            {
                <div class="alert alert-warning small">
                    <div class="fw-semibold">Dev Setup</div>
                    <div>Şifre belirleme linki: <a href="@devSetupUrl" target="_blank">@devSetupUrl</a></div>
                    <div>UserId: @devPasswordUserId</div>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
