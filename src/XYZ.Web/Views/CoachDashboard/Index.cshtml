@model XYZ.Web.Models.Dashboard.CoachDashboardViewModel
@{
    ViewData["Title"] = "Koç Paneli";
}

<div class="d-flex flex-wrap justify-content-between align-items-end gap-2 mb-3">
    <div>
        <h2 class="mb-1">Koç Paneli</h2>
        <div class="text-muted small">Hoş geldin, @Model.UserDisplayName</div>
    </div>

    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-sm btn-primary" asp-controller="Attendance" asp-action="Index">Bugünkü Antrenmanlar</a>
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Students" asp-action="Index">Öğrencilerim</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Öğrenciler</div>
                <a class="small" asp-controller="Students" asp-action="Index">Liste</a>
            </div>
            <div class="fs-4 fw-semibold mt-1">@Model.Stats.StudentCount</div>
            <div class="text-muted small">Sana bağlı öğrenciler</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Sınıflar</div>
                <a class="small" asp-controller="Classes" asp-action="Index">Liste</a>
            </div>
            <div class="fs-4 fw-semibold mt-1">@Model.Stats.ClassCount</div>
            <div class="text-muted small">Atanmış sınıflar</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Bugünkü Antrenmanlar</div>
                <a class="small" asp-controller="Attendance" asp-action="Index">Aç</a>
            </div>
            <div class="fs-4 fw-semibold mt-1">@Model.Stats.TodaySessionsCount</div>
            <div class="text-muted small">Yoklama almayı unutma</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Yaklaşan Antrenmanlar</div>
                <a class="small" asp-controller="Attendance" asp-action="Index">Aç</a>
            </div>
            <div class="fs-4 fw-semibold mt-1">@Model.Stats.UpcomingSessionsCount</div>
            <div class="text-muted small">Planlanmış oturumlar</div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12 col-lg-6">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Aidatlar</div>
                <a class="small" asp-controller="Payments" asp-action="Index">Tümü</a>
            </div>

            <div class="mt-3">
                <div class="d-flex justify-content-between align-items-baseline">
                    <div>
                        <div class="fw-semibold">Gecikmiş Aidatlar</div>
                        <div class="text-muted small">Hatırlatma yapman gerekenler</div>
                    </div>
                    <div class="text-end">
                        <div class="fw-semibold">@Model.Stats.OverduePaymentsCount</div>
                        <div class="text-muted small">@Model.Stats.OverduePaymentsAmount.ToString("C2")</div>
                    </div>
                </div>
                <div class="mt-2">
                    <a class="btn btn-sm btn-outline-danger w-100"
                       asp-controller="Payments"
                       asp-action="Index"
                       asp-route-status="Overdue">
                        Gecikmişleri Aç
                    </a>
                </div>
            </div>

            <hr class="my-3" />

            <div class="d-flex justify-content-between align-items-baseline">
                <div>
                    <div class="fw-semibold">Bekleyen Aidatlar</div>
                    <div class="text-muted small">Henüz vadesi geçmemiş</div>
                </div>
                <div class="text-end">
                    <div class="fw-semibold">@Model.Stats.PendingPaymentsCount</div>
                    <div class="text-muted small">@Model.Stats.PendingPaymentsAmount.ToString("C2")</div>
                </div>
            </div>

            <div class="mt-2">
                <a class="btn btn-sm btn-outline-secondary w-100"
                   asp-controller="Payments"
                   asp-action="Index"
                   asp-route-status="Pending">
                    Bekleyenleri Aç
                </a>
            </div>

            <div class="text-muted small mt-3">
                Yaklaşan vadeler (7 gün): <span class="fw-semibold">@Model.Stats.UpcomingDuePaymentsCount</span>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Eksik Belgeler (Öğrenciler)</div>
                <a class="small" asp-controller="Documents" asp-action="Students" asp-route-onlyIncomplete="true">Liste</a>
            </div>

            <div class="mt-3">
                <div class="d-flex justify-content-between align-items-baseline">
                    <div>
                        <div class="fw-semibold">Eksik belgesi olan öğrenci</div>
                        <div class="text-muted small">Kulüp uyum süreci</div>
                    </div>
                    <div class="fs-4 fw-semibold">@Model.Stats.IncompleteStudentDocumentsCount</div>
                </div>

                <div class="mt-2">
                    <a class="btn btn-sm btn-outline-primary w-100"
                       asp-controller="Documents"
                       asp-action="Students"
                       asp-route-onlyIncomplete="true">
                        Eksikleri Aç
                    </a>
                </div>

                <div class="text-muted small mt-3">
                    Not: Belgeleri öğrenci adına sen de yükleyebilirsin.
                </div>
            </div>
        </div>
    </div>
</div>
