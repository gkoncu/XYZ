﻿@using XYZ.Application.Features.Admins.Queries.GetAdminById
@model AdminDetailDto
@inject IConfiguration Config

@{
    ViewData["Title"] = "Admin Detayı";

    string BuildInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
                        .Take(2)
                        .ToArray();
        if (parts.Length == 0) return "?";
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpperInvariant();
        return (parts[0].Substring(0, 1) + parts[1].Substring(0, 1)).ToUpperInvariant();
    }

    string? NormalizeAssetUrl(string? raw)
    {
        if (string.IsNullOrWhiteSpace(raw)) return null;
        if (raw.StartsWith("http://", StringComparison.OrdinalIgnoreCase) || raw.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
            return raw;

        var baseUrl = (Config["Api:BaseUrl"] ?? string.Empty);
        if (!Uri.TryCreate(baseUrl, UriKind.Absolute, out var apiUri))
            return raw;

        var origin = apiUri.GetLeftPart(UriPartial.Authority);
        if (!raw.StartsWith("/")) raw = "/" + raw;

        return $"{origin}{raw}?v={DateTime.UtcNow.Ticks}";
    }

    var initials = BuildInitials(Model.FullName ?? "");
    var profilePictureUrl = NormalizeAssetUrl(Model.ProfilePictureUrl);
    var hasPhoto = !string.IsNullOrWhiteSpace(profilePictureUrl);
}

<section class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Index" class="text-muted small text-decoration-none">&larr; Admin listesine dön</a>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-light me-1">
            Admin Düzenle
        </a>

        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
        {
            <form asp-action="Delete"
                  asp-route-id="@Model.Id"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Bu admin kaydını silmek istediğinize emin misiniz?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-danger">Admini Sil</button>
            </form>
        }
    </div>
</section>

<section class="detail-grid">
    <div class="detail-card">
        <div class="d-flex align-items-start gap-3 mb-3">
            <div class="rounded-circle border d-inline-flex align-items-center justify-content-center flex-shrink-0"
                 style="width:72px;height:72px;overflow:hidden;background:rgba(0,0,0,.04);">
                @if (hasPhoto)
                {
                    <img src="@profilePictureUrl" alt="Profil Fotoğrafı" style="width:100%;height:100%;object-fit:cover;" />
                }
                else
                {
                    <span class="fw-semibold" style="font-size:22px; letter-spacing:.5px;">@initials</span>
                }
            </div>

            <div class="flex-grow-1">
                <h2 class="h5 mb-1">@Model.FullName</h2>
                <div class="text-muted small">@Model.Email</div>
            </div>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">E-posta</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Kulüp</dt>
            <dd class="col-sm-9">@Model.TenantName</dd>

            <dt class="col-sm-3">T.C. Kimlik No</dt>
            <dd class="col-sm-9">@Model.IdentityNumber</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-secondary">Pasif</span>
                }
            </dd>

            <dt class="col-sm-3">Oluşturulma</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>

            <dt class="col-sm-3">Güncellenme</dt>
            <dd class="col-sm-9">@Model.UpdatedAt</dd>
        </dl>
    </div>

    <div class="detail-card">
        <h3 class="h6 mb-2">Yetkiler</h3>

        <p class="mb-1">
            <span class="badge-soft @(Model.CanManageUsers ? "badge-soft-success" : "badge-soft-secondary")">Kullanıcı Yönetimi</span>
        </p>
        <p class="mb-1">
            <span class="badge-soft @(Model.CanManageFinance ? "badge-soft-success" : "badge-soft-secondary")">Finans Yönetimi</span>
        </p>
        <p class="mb-0">
            <span class="badge-soft @(Model.CanManageSettings ? "badge-soft-success" : "badge-soft-secondary")">Ayarlar Yönetimi</span>
        </p>
    </div>
</section>
