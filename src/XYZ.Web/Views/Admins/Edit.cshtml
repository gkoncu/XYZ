@model XYZ.Web.Models.Admins.AdminEditViewModel

@{
    ViewData["Title"] = "Admin Yetkilerini Düzenle";
}

<section class="mb-3">
    <a asp-action="Details" asp-route-id="@Model.Id" class="text-muted small text-decoration-none">
        &larr; Admin detayına dön
    </a>
</section>

<section class="card-surface">
    <h2 class="h5 mb-3">Admin Yetkilerini Düzenle</h2>

    <form asp-action="Edit" method="post" class="row g-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="col-md-6">
            <label class="form-label small">Ad Soyad</label>
            <input class="form-control form-control-sm" value="@Model.FullName" disabled />
        </div>

        <div class="col-md-6">
            <label class="form-label small">Tenant</label>
            <input class="form-control form-control-sm" value="@Model.TenantName" disabled />
        </div>

        <div class="col-md-6">
            <label class="form-label small">E-posta</label>
            <input class="form-control form-control-sm" value="@Model.Email" disabled />
        </div>

        <div class="col-md-6">
            <label class="form-label small">Telefon</label>
            <input class="form-control form-control-sm" value="@Model.PhoneNumber" disabled />
        </div>

        <div class="col-md-4">
            <label asp-for="IdentityNumber" class="form-label small"></label>
            <input asp-for="IdentityNumber" class="form-control form-control-sm" />
            <span asp-validation-for="IdentityNumber" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="IsActive" class="form-label small"></label>
            <input asp-for="IsActive" class="form-control form-control-sm" disabled />
        </div>

        <div class="col-md-12">
            <h3 class="h6 mt-3">Yetki Alanları</h3>
        </div>

        <div class="col-md-4 form-check">
            <input asp-for="CanManageUsers" class="form-check-input" />
            <label asp-for="CanManageUsers" class="form-check-label small"></label>
        </div>

        <div class="col-md-4 form-check">
            <input asp-for="CanManageFinance" class="form-check-input" />
            <label asp-for="CanManageFinance" class="form-check-label small"></label>
        </div>

        <div class="col-md-4 form-check">
            <input asp-for="CanManageSettings" class="form-check-input" />
            <label asp-for="CanManageSettings" class="form-check-label small"></label>
        </div>

        <div class="col-12 d-flex justify-content-end mt-3">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-light me-2">
                İptal
            </a>
            <button type="submit" class="btn btn-sm btn-primary">
                Kaydet
            </button>
        </div>
    </form>
</section>
