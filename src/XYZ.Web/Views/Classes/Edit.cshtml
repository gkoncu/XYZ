@model XYZ.Web.Models.Classes.ClassEditViewModel

@{
    ViewData["Title"] = "Sınıf Düzenle";
    var branches = ViewBag.BranchesSelectList as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2 class="h4 mb-3">Sınıf Düzenle</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Name" class="form-label small"></label>
        <input asp-for="Name" class="form-control form-control-sm" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BranchId" class="form-label small"></label>
        <select asp-for="BranchId" class="form-select form-select-sm" asp-items="branches">
            <option value="">Şube seçiniz</option>
        </select>
        <span asp-validation-for="BranchId" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label small"></label>
        <textarea asp-for="Description" class="form-control form-control-sm" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="AgeGroupMin" class="form-label small"></label>
        <input asp-for="AgeGroupMin" class="form-control form-control-sm" />
        <span asp-validation-for="AgeGroupMin" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="AgeGroupMax" class="form-label small"></label>
        <input asp-for="AgeGroupMax" class="form-control form-control-sm" />
        <span asp-validation-for="AgeGroupMax" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="MaxCapacity" class="form-label small"></label>
        <input asp-for="MaxCapacity" class="form-control form-control-sm" />
        <span asp-validation-for="MaxCapacity" class="text-danger small"></span>
    </div>

    <div class="col-12 d-flex justify-content-end mt-2">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-light me-2">İptal</a>
        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
    </div>
</form>
