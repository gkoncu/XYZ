@using Microsoft.AspNetCore.Mvc.Rendering
@using XYZ.Application.Common.Models
@using XYZ.Application.Features.Classes.Queries.GetAllClasses
@model PaginationResult<ClassListItemDto>

@{
    ViewData["Title"] = "Sınıflar";

    var isSuperAdmin = User.IsInRole("SuperAdmin");
    var canCreate = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
    var canFilterByBranch = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");

    string? searchTerm = ViewBag.SearchTerm as string;

    int? branchId = ViewBag.BranchId is int bi ? bi : (int?)null;

    var branches = ViewBag.BranchesSelectList as List<SelectListItem> ?? new List<SelectListItem>();
}

<section class="mb-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <h2 class="h4 mb-1">Sınıflar</h2>
            <p class="text-muted small mb-0">Sınıfları görüntüleyin ve yönetin.</p>
        </div>

        @if (canCreate)
        {
            <div>
                <a asp-action="Create" class="btn btn-sm btn-primary">+ Yeni Sınıf</a>
            </div>
        }
    </div>

    <form method="get" class="row g-2 align-items-end">
        <div class="col-12 col-md-6">
            <label class="form-label small">Ara</label>
            <input name="searchTerm"
                   value="@searchTerm"
                   class="form-control form-control-sm"
                   placeholder="Sınıf adı..." />
        </div>

        @if (canFilterByBranch)
        {
            <div class="col-12 col-md-4">
                <label class="form-label small">Şube</label>
                <select name="branchId" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    @foreach (var b in branches)
                    {
                        <option value="@b.Value" selected="@(b.Value == branchId?.ToString())">@b.Text</option>
                    }
                </select>
            </div>
        }

        <div class="col-12 col-md-2 d-grid">
            <button type="submit" class="btn btn-sm btn-primary">Filtrele</button>
        </div>
    </form>
</section>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success py-2 small">@ok</div>
}
@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger py-2 small">@err</div>
}

<section class="card-surface">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="small text-muted">
            Toplam: <strong>@Model.TotalCount</strong>
        </div>
    </div>

    <!-- Desktop table -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle mb-0">
            <thead>
                <tr>
                    <th>Sınıf</th>
                    <th>Şube</th>
                    <th class="text-end">Öğrenci</th>
                    <th class="text-end">Koç</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items is null || Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@item.Name</div>
                                @if (isSuperAdmin && !string.IsNullOrWhiteSpace(item.TenantName))
                                {
                                    <div class="small text-muted">Kulüp: @item.TenantName</div>
                                }
                            </td>
                            <td>
                                <span class="text-muted">@item.BranchName</span>
                            </td>
                            <td class="text-end">@item.StudentsCount</td>
                            <td class="text-end">@item.CoachesCount</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-outline-light">
                                        Detay
                                    </a>
                                    @if (canCreate)
                                    {
                                        <a asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="btn btn-outline-secondary">
                                            Düzenle
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile cards -->
    <div class="d-md-none vstack gap-3">
        @if (Model.Items is null || Model.Items.Count == 0)
        {
            <div class="text-center text-muted py-4">Kayıt bulunamadı.</div>
        }
        else
        {
            @foreach (var item in Model.Items)
            {
                <div class="card-surface">
                    <div class="d-flex justify-content-between align-items-start gap-2">
                        <div>
                            <div class="fw-semibold">@item.Name</div>
                            <div class="small text-muted">@item.BranchName</div>
                            @if (isSuperAdmin && !string.IsNullOrWhiteSpace(item.TenantName))
                            {
                                <div class="small text-muted">Kulüp: @item.TenantName</div>
                            }
                        </div>
                        <div class="text-end small text-muted">
                            <div>@item.StudentsCount öğrenci</div>
                            <div>@item.CoachesCount koç</div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light">
                            Detay
                        </a>

                        @if (canCreate)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                Düzenle
                            </a>
                        }
                    </div>
                </div>
            }
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalCount > Model.PageSize)
    {
        <hr class="my-3" />
        <div class="d-flex justify-content-between align-items-center">
            <div class="small text-muted">
                Sayfa @Model.PageNumber / @((int)Math.Ceiling((double)Model.TotalCount / Model.PageSize))
            </div>

            <div class="d-flex gap-2">
                @if (Model.PageNumber > 1)
                {
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-action="Index"
                       asp-route-searchTerm="@searchTerm"
                       asp-route-branchId="@branchId"
                       asp-route-pageNumber="@(Model.PageNumber - 1)"
                       asp-route-pageSize="@Model.PageSize">
                        &laquo; Önceki
                    </a>
                }

                @if (Model.PageNumber * Model.PageSize < Model.TotalCount)
                {
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-action="Index"
                       asp-route-searchTerm="@searchTerm"
                       asp-route-branchId="@branchId"
                       asp-route-pageNumber="@(Model.PageNumber + 1)"
                       asp-route-pageSize="@Model.PageSize">
                        Sonraki &raquo;
                    </a>
                }
            </div>
        </div>
    }
</section>
