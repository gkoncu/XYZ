@model XYZ.Web.Models.Classes.ClassDetailsViewModel

@{
    ViewData["Title"] = "Sınıf Detay";
    var c = Model.Class;

    var isSuperAdmin = User.IsInRole("SuperAdmin");
    var canEdit = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
    var canCoachAssign = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
    var canStudentAssign = User.IsInRole("Admin") || User.IsInRole("Coach") || User.IsInRole("SuperAdmin");

    var today = DateOnly.FromDateTime(DateTime.Today);
    var weekFrom = today.AddDays(-3);
    var weekTo = today.AddDays(3);

    var todayStr = today.ToString("yyyy-MM-dd");
    var weekFromStr = weekFrom.ToString("yyyy-MM-dd");
    var weekToStr = weekTo.ToString("yyyy-MM-dd");
}

<section class="mb-3 d-flex flex-wrap justify-content-between align-items-center gap-2">
    <a asp-action="Index" class="text-muted small text-decoration-none">&larr; Sınıf listesine dön</a>

    <!-- Desktop actions -->
    <div class="d-none d-md-flex gap-2">
        @if (canEdit)
        {
            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Düzenle</a>

            <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-outline-danger"
                        onclick="return confirm('Sınıf silinsin mi?');">
                    Sil
                </button>
            </form>
        }

        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Liste</a>
    </div>
</section>

<section class="mb-3">
    <div>
        <h2 class="h4 mb-1">@c.Name</h2>
        <div class="text-muted small">
            Şube: @c.BranchName
            @if (isSuperAdmin && !string.IsNullOrWhiteSpace(c.TenantName))
            {
                <span> · Kulüp: @c.TenantName</span>
            }
        </div>
    </div>
</section>

@if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success py-2 small">@ok</div>
}
@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger py-2 small">@err</div>
}

<!-- Mobile quick actions -->
<section class="card-surface mb-3 d-md-none">
    <div class="fw-semibold mb-2">Hızlı İşlemler</div>

    <div class="d-grid gap-2">
        <a asp-controller="ClassSessions"
           asp-action="Index"
           asp-route-classId="@c.Id"
           asp-route-from="@todayStr"
           asp-route-to="@todayStr"
           class="btn btn-outline-primary">
            Antrenmanlar (Bugün)
        </a>

        <a asp-controller="ClassSessions"
           asp-action="Index"
           asp-route-classId="@c.Id"
           asp-route-from="@weekFromStr"
           asp-route-to="@weekToStr"
           class="btn btn-outline-primary">
            Antrenmanlar (Bu Hafta)
        </a>

        <a asp-controller="Branches"
           asp-action="Details"
           asp-route-id="@c.BranchId"
           class="btn btn-outline-primary">
            Şube Detayı
        </a>
    </div>

    <hr class="my-3" />

    @if (canEdit)
    {
        <div class="d-grid gap-2">
            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-outline-secondary">Düzenle</a>

            <form asp-action="Delete" asp-route-id="@c.Id" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger w-100"
                        onclick="return confirm('Sınıf silinsin mi?');">
                    Sil
                </button>
            </form>

            <a asp-action="Index" class="btn btn-outline-secondary">Liste</a>
        </div>
    }
    else
    {
        <div class="d-grid">
            <a asp-action="Index" class="btn btn-outline-secondary">Liste</a>
        </div>
    }
</section>

<section class="detail-grid">
    <!-- LEFT -->
    <div class="vstack gap-3">
        <div class="card-surface">
            <div class="fw-semibold mb-2">Sınıf Bilgileri</div>

            @if (!string.IsNullOrWhiteSpace(c.Description))
            {
                <div class="small text-muted mb-2">@c.Description</div>
            }

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="small text-muted">Yaş Aralığı</div>
                    <div>@(c.AgeGroupMin?.ToString() ?? "-") - @(c.AgeGroupMax?.ToString() ?? "-")</div>
                </div>
                <div class="col-md-6">
                    <div class="small text-muted">Kontenjan</div>
                    <div>@c.MaxCapacity</div>
                </div>
                <div class="col-md-6">
                    <div class="small text-muted">Öğrenci</div>
                    <div>@c.StudentsCount</div>
                </div>
                <div class="col-md-6">
                    <div class="small text-muted">Koç</div>
                    <div>@c.CoachesCount</div>
                </div>
            </div>

            <div class="mt-3">
                @if (c.IsActive)
                {
                    <span class="badge-soft badge-soft-success">Aktif</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-muted">Pasif</span>
                }
            </div>
        </div>

        <!-- Öğrenci atama -->
        <div class="card-surface">
            <div class="fw-semibold mb-2">Öğrenci İşlemleri</div>

            @if (!canStudentAssign)
            {
                <div class="text-muted small">Bu işlem için yetkiniz yok.</div>
            }
            else
            {
                <form asp-action="AssignStudent" asp-route-id="@c.Id" method="post" class="row g-2 align-items-end">
                    @Html.AntiForgeryToken()

                    <div class="col-12 col-md-8">
                        <label class="form-label form-label-sm">Öğrenci Ata</label>
                        <select name="studentId" class="form-select form-select-sm" asp-items="Model.AvailableStudents">
                            <option value="">Öğrenci seçiniz</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-sm btn-primary">Ata</button>
                    </div>
                </form>
            }
        </div>

        <!-- Koç atama -->
        @if (canCoachAssign)
        {
            <div class="card-surface">
                <div class="fw-semibold mb-2">Koç İşlemleri</div>

                <form asp-action="AssignCoach" asp-route-id="@c.Id" method="post" class="row g-2 align-items-end">
                    @Html.AntiForgeryToken()

                    <div class="col-12 col-md-8">
                        <label class="form-label form-label-sm">Koç Ata</label>
                        <select name="coachId" class="form-select form-select-sm" asp-items="Model.AvailableCoaches">
                            <option value="">Koç seçiniz</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-sm btn-primary">Ata</button>
                    </div>
                </form>
            </div>
        }
    </div>

    <!-- RIGHT: Quick actions + yönlendirme -->
    <div class="vstack gap-3 d-none d-md-block">
        <div class="card-surface">
            <h2 class="h6 mb-3">Hızlı İşlemler</h2>

            <div class="d-grid gap-2">
                <a asp-controller="ClassSessions"
                   asp-action="Index"
                   asp-route-classId="@c.Id"
                   asp-route-from="@todayStr"
                   asp-route-to="@todayStr"
                   class="btn btn-outline-primary">
                    Antrenmanlar (Bugün)
                </a>

                <a asp-controller="ClassSessions"
                   asp-action="Index"
                   asp-route-classId="@c.Id"
                   asp-route-from="@weekFromStr"
                   asp-route-to="@weekToStr"
                   class="btn btn-outline-primary">
                    Antrenmanlar (Bu Hafta)
                </a>

                <a asp-controller="Branches"
                   asp-action="Details"
                   asp-route-id="@c.BranchId"
                   class="btn btn-outline-primary">
                    Şube Detayı
                </a>

                @if (canEdit)
                {
                    <hr class="my-2" />
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-outline-secondary">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@c.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100"
                                onclick="return confirm('Sınıf silinsin mi?');">
                            Sil
                        </button>
                    </form>
                }
            </div>
        </div>
        <div class="card-surface">
            <h2 class="h6 mb-2">İpucu</h2>
        @if (canEdit)
        {
            <p class="small text-muted mb-0">
                Yalnızca sınıfla aynı şubeye sahip koçları atayabilirsiniz.
            </p>            
        }
            <br />
            <p class="small text-muted mb-0">
                Öğrenciyle ilgili tüm işlemler için aşağıdaki listeden <strong>Detay</strong> ekranına gidin.
                (Aidatlar, belgeler, gelişim, yoklama geçmişi)
            </p>
        </div>
    </div>
</section>

<!-- Atanan Koçlar -->
<section class="card-surface mt-3">
    <div class="d-flex justify-content-between align-items-center gap-2 mb-2">
        <div class="fw-semibold">Atanan Koçlar</div>
        <div class="small text-muted">@c.Coaches.Count koç</div>
    </div>

    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle mb-0">
            <thead>
                <tr>
                    <th>Koç</th>
                    <th class="text-end">Detay</th>
                    @if (canCoachAssign)
                    {
                        <th class="text-end">İşlem</th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (c.Coaches.Count == 0)
                {
                    <tr>
                        <td colspan=@(canCoachAssign ? 3 : 2) class="text-center text-muted py-4">
                            Koç atanmadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var co in c.Coaches)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@co.FullName</div>
                            </td>
                            <td class="text-end">
                                <a asp-controller="Coaches"
                                   asp-action="Details"
                                   asp-route-id="@co.Id"
                                   class="btn btn-sm btn-outline-light">
                                    Detay
                                </a>
                            </td>

                            @if (canCoachAssign)
                            {
                                <td class="text-end">
                                    <form asp-action="UnassignCoach" asp-route-id="@c.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="coachId" value="@co.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Koç sınıftan çıkarılsın mı?');">
                                            Çıkar
                                        </button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile cards -->
    <div class="d-md-none vstack gap-3">
        @if (c.Coaches.Count == 0)
        {
            <div class="text-center text-muted py-4">Koç atanmadı.</div>
        }
        else
        {
            @foreach (var co in c.Coaches)
            {
                <div class="card-surface">
                    <div class="d-flex justify-content-between align-items-start gap-2">
                        <div>
                            <div class="fw-semibold">@co.FullName</div>
                        </div>
                        <a asp-controller="Coaches"
                           asp-action="Details"
                           asp-route-id="@co.Id"
                           class="btn btn-sm btn-outline-primary">
                            Detay
                        </a>
                    </div>

                    @if (canCoachAssign)
                    {
                        <div class="mt-3">
                            <form asp-action="UnassignCoach" asp-route-id="@c.Id" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="coachId" value="@co.Id" />
                                <button type="submit" class="btn btn-outline-danger w-100"
                                        onclick="return confirm('Koç sınıftan çıkarılsın mı?');">
                                    Koçu Çıkar
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
        }
    </div>
</section>

<!-- Sınıftaki Öğrenciler -->
<section class="card-surface mt-3">
    <div class="d-flex justify-content-between align-items-center gap-2 mb-2">
        <div class="fw-semibold">Sınıftaki Öğrenciler</div>
        <div class="small text-muted">@c.Students.Count öğrenci</div>
    </div>

    <!-- Desktop table -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle mb-0">
            <thead>
                <tr>
                    <th>Öğrenci</th>
                    <th>Durum</th>
                    <th class="text-end">Detay</th>
                    <th class="text-end">Hızlı</th>
                    @if (canStudentAssign)
                    {
                        <th class="text-end">İşlem</th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (c.Students.Count == 0)
                {
                    <tr>
                        <td colspan=@(canStudentAssign ? 5 : 4) class="text-center text-muted py-4">
                            Öğrenci atanmadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var s in c.Students)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@s.FullName</div>
                            </td>
                            <td>
                                @if (s.IsActive)
                                {
                                    <span class="badge-soft badge-soft-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge-soft badge-soft-muted">Pasif</span>
                                }
                            </td>

                            <td class="text-end">
                                <a asp-controller="Students"
                                   asp-action="Details"
                                   asp-route-id="@s.Id"
                                   class="btn btn-sm btn-outline-light">
                                    Detay
                                </a>
                            </td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Payments"
                                       asp-action="Index"
                                       asp-route-studentId="@s.Id"
                                       class="btn btn-outline-secondary">
                                        Aidatlar
                                    </a>
                                    <a asp-controller="Documents"
                                       asp-action="Student"
                                       asp-route-studentId="@s.Id"
                                       class="btn btn-outline-secondary">
                                        Belgeler
                                    </a>
                                    <a asp-controller="ProgressRecords"
                                       asp-action="Student"
                                       asp-route-studentId="@s.Id"
                                       class="btn btn-outline-secondary">
                                        Gelişim
                                    </a>
                                </div>
                            </td>

                            @if (canStudentAssign)
                            {
                                <td class="text-end">
                                    <form asp-action="UnassignStudent" asp-route-id="@c.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="studentId" value="@s.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Öğrenci sınıftan çıkarılsın mı?');">
                                            Çıkar
                                        </button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile cards -->
    <div class="d-md-none">
        @if (c.Students.Count == 0)
        {
            <div class="text-center text-muted py-4">Öğrenci atanmadı.</div>
        }
        else
        {
            <div class="vstack gap-3">
                @foreach (var s in c.Students)
                {
                    <div class="card-surface">
                        <div class="d-flex justify-content-between align-items-start gap-2">
                            <div>
                                <div class="fw-semibold">@s.FullName</div>
                            </div>
                            @if (s.IsActive)
                            {
                                <span class="badge-soft badge-soft-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge-soft badge-soft-muted">Pasif</span>
                            }
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <a asp-controller="Students"
                               asp-action="Details"
                               asp-route-id="@s.Id"
                               class="btn btn-outline-secondary">
                                Öğrenci Detayı
                            </a>

                            <a asp-controller="Payments"
                               asp-action="Index"
                               asp-route-studentId="@s.Id"
                               class="btn btn-outline-primary">
                                Aidatlar
                            </a>

                            <a asp-controller="Documents"
                               asp-action="Student"
                               asp-route-studentId="@s.Id"
                               class="btn btn-outline-primary">
                                Belgeler
                            </a>

                            <a asp-controller="ProgressRecords"
                               asp-action="Student"
                               asp-route-studentId="@s.Id"
                               class="btn btn-outline-primary">
                                Gelişim
                            </a>
                        </div>

                        @if (canStudentAssign)
                        {
                            <div class="mt-3">
                                <form asp-action="UnassignStudent" asp-route-id="@c.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="studentId" value="@s.Id" />
                                    <button type="submit" class="btn btn-outline-danger w-100"
                                            onclick="return confirm('Öğrenci sınıftan çıkarılsın mı?');">
                                        Sınıftan Çıkar
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</section>

@if (canEdit)
{
    <!-- Mobile sticky action bar (edit/delete/list) -->
    <div class="d-md-none position-sticky bottom-0 start-0 end-0 mt-4"
         style="z-index: 1020; background: rgba(15,23,42,0.95); border-top: 1px solid var(--border-subtle);">
        <div class="container-fluid py-2">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary flex-fill">Düzenle</a>

                <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="flex-fill">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger w-100"
                            onclick="return confirm('Sınıf silinsin mi?');">
                        Sil
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-outline-secondary">Liste</a>
            </div>
        </div>
    </div>
}
