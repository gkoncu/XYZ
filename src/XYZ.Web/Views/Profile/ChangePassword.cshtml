@model XYZ.Web.Models.Profile.ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-7">
        <div class="card-surface p-4">
            <div class="d-flex justify-content-between align-items-end gap-2 mb-3">
                <div>
                    <h2 class="mb-1">Şifre Değiştir</h2>
                    <div class="text-muted small">Mevcut şifrenizi doğrulayarak yeni şifre belirleyin.</div>
                </div>
                <a asp-controller="Settings" asp-action="Index" class="btn btn-sm btn-outline-secondary">Ayarlar</a>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label small"></label>
                    <input asp-for="CurrentPassword" class="form-control form-control-sm" autocomplete="current-password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label small"></label>
                    <input asp-for="NewPassword" class="form-control form-control-sm" autocomplete="new-password" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label small"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control form-control-sm" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-sm btn-outline-secondary">İptal</a>
                    <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
