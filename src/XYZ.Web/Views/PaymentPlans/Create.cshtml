@model CreatePaymentPlanCommand
@{
    ViewData["Title"] = "Ödeme Planı Oluştur";
}

<section class="mb-3">
    <a asp-controller="PaymentPlans"
       asp-action="Student"
       asp-route-studentId="@Model.StudentId"
       class="text-muted small text-decoration-none">
        &larr; Ödeme planına dön
    </a>
</section>

<section class="card-surface">
    <div class="card-body">
        <h2 class="h5 mb-3">Ödeme Planı Oluştur</h2>

        <form asp-action="Create" method="post" id="planForm">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="StudentId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label">Öğrenci</label>
                    <div class="p-2 border rounded bg-white">
                        <span class="text-muted small">Öğrenci ID:</span>
                        <span class="fw-semibold">@Model.StudentId</span>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="TotalAmount" class="form-label">Toplam Tutar</label>
                    <input asp-for="TotalAmount" class="form-control" inputmode="decimal" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="FirstDueDate" class="form-label">İlk Vade Tarihi</label>
                    <input asp-for="FirstDueDate"
                           class="form-control"
                           type="date"
                           value="@(Model.FirstDueDate == default ? DateTime.Today.ToString("yyyy-MM-dd") : Model.FirstDueDate.ToString("yyyy-MM-dd"))" />
                    <span asp-validation-for="FirstDueDate" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Ödeme Tipi</label>
                    <div class="d-flex flex-wrap gap-3">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   id="plan-pesin"
                                   name="IsInstallment"
                                   value="false"
                                   @(Model.IsInstallment ? null : "checked") />
                            <label class="form-check-label" for="plan-pesin">Peşin (tek ödeme)</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   id="plan-taksit"
                                   name="IsInstallment"
                                   value="true"
                                   @(Model.IsInstallment ? "checked" : null) />
                            <label class="form-check-label" for="plan-taksit">Aylık taksitli</label>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="TotalInstallments" class="form-label">Taksit Sayısı</label>
                    <input asp-for="TotalInstallments" class="form-control" id="installmentsInput" min="1" />
                    <div class="form-text">
                        Peşin ödemede <strong>1</strong> olmalıdır.
                    </div>
                    <span asp-validation-for="TotalInstallments" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label">Önizleme</label>
                    <div class="p-3 border rounded bg-white h-100">
                        <div class="small text-muted mb-1">Yaklaşık taksit tutarı</div>
                        <div class="fw-semibold" id="previewInstallment">-</div>
                        <div class="small text-muted mt-2">
                            Bu önizleme sadece toplam/taksit sayısına göre hesaplanır.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Desktop actions -->
            <div class="mt-3 d-none d-md-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Kaydet</button>

                <a asp-controller="PaymentPlans"
                   asp-action="Student"
                   asp-route-studentId="@Model.StudentId"
                   class="btn btn-outline-secondary">
                    Vazgeç
                </a>
            </div>

            <!-- Mobile sticky action bar -->
            <div class="d-md-none position-sticky bottom-0 start-0 end-0 bg-white border-top mt-4" style="z-index: 1020;">
                <div class="container-fluid py-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">Kaydet</button>
                        <a asp-controller="PaymentPlans"
                           asp-action="Student"
                           asp-route-studentId="@Model.StudentId"
                           class="btn btn-outline-secondary">
                            Vazgeç
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    (function () {
        const pesin = document.getElementById('plan-pesin');
        const taksit = document.getElementById('plan-taksit');
        const installmentsInput = document.getElementById('installmentsInput');
        const totalAmount = document.getElementById('TotalAmount');
        const preview = document.getElementById('previewInstallment');

        function parseNumber(val) {
            if (!val) return 0;
            const normalized = ('' + val).replace(',', '.');
            const n = Number(normalized);
            return isNaN(n) ? 0 : n;
        }

        function updateInstallmentsState() {
            if (pesin.checked) {
                installmentsInput.value = 1;
                installmentsInput.setAttribute('readonly', 'readonly');
                installmentsInput.classList.add('bg-light');
            } else {
                installmentsInput.removeAttribute('readonly');
                installmentsInput.classList.remove('bg-light');
                if (parseInt(installmentsInput.value || '0', 10) < 2) {
                    installmentsInput.value = 2;
                }
            }
            updatePreview();
        }

        function updatePreview() {
            const total = parseNumber(totalAmount.value);
            let count = parseInt(installmentsInput.value || '0', 10);
            if (!count || count < 1) count = 1;

            const approx = total / count;
            if (!approx || approx <= 0) {
                preview.textContent = '-';
                return;
            }

            preview.textContent = approx.toLocaleString('tr-TR', { style: 'currency', currency: 'TRY' });
        }

        pesin.addEventListener('change', updateInstallmentsState);
        taksit.addEventListener('change', updateInstallmentsState);
        installmentsInput.addEventListener('input', updatePreview);
        totalAmount.addEventListener('input', updatePreview);

        updateInstallmentsState();
    })();
</script>
