﻿﻿@using XYZ.Domain.Enums
@model StudentPaymentPlanDto

@{
    var studentId = (int?)ViewBag.StudentId ?? (Model?.StudentId ?? 0);
    ViewData["Title"] = "Ödeme Planı";

    var isAdmin = User.IsInRole("Admin") || User.IsInRole("SuperAdmin");
    var isStudent = User.IsInRole("Student");
    var isCoach = User.IsInRole("Coach");

    var backController = isStudent ? "Payments" : "Students";
    var backAction = isStudent ? "My" : "Details";
}

<section class="mb-3 d-flex justify-content-between align-items-center gap-2">
    <a asp-controller="@backController"
       asp-action="@backAction"
       asp-route-id="@(isStudent ? null : studentId)"
       class="text-muted small text-decoration-none">
        &larr; Geri dön
    </a>

    @if (isAdmin && studentId > 0)
    {
        <a asp-controller="PaymentPlans"
           asp-action="Create"
           asp-route-studentId="@studentId"
           class="btn btn-sm btn-primary d-none d-md-inline-block">
            Ödeme Planı Oluştur
        </a>
    }
</section>

@if (Model == null)
{
    <section class="card-surface">
        <div class="card-body text-center">
            <h2 class="h5 mb-2">Ödeme planı bulunmuyor.</h2>
            <p class="text-muted small mb-3">
                Bu öğrenci için henüz bir ödeme planı oluşturulmamış.
            </p>

            @if (isAdmin && studentId > 0)
            {
                <a asp-controller="PaymentPlans"
                   asp-action="Create"
                   asp-route-studentId="@studentId"
                   class="btn btn-primary">
                    Yeni Ödeme Planı Oluştur
                </a>
            }
            else if (isStudent)
            {
                <div class="alert alert-info mb-0 small">
                    Ödeme planınız henüz oluşturulmamış. Lütfen kulübünüzle iletişime geçin.
                </div>
            }
        </div>
    </section>

    @if (isAdmin && studentId > 0)
    {
        <div class="d-md-none position-sticky bottom-0 start-0 end-0 bg-white border-top" style="z-index: 1020;">
            <div class="container-fluid py-2">
                <a asp-controller="PaymentPlans"
                   asp-action="Create"
                   asp-route-studentId="@studentId"
                   class="btn btn-primary w-100">
                    Ödeme Planı Oluştur
                </a>
            </div>
        </div>
    }
}
else
{
    var today = DateTime.Today;

    var hasOverdue = Model.Installments.Any(i =>
        (i.Status == PaymentStatus.Pending && i.DueDate.Date < today) ||
        i.Status == PaymentStatus.Overdue);

    if (hasOverdue)
    {
        <div class="alert alert-danger small mb-3">
            Vadesi geçmiş ödemeleriniz var. Lütfen taksitleri kontrol edin.
        </div>
    }

    <section class="detail-grid mb-3">
        <div class="card-surface">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start gap-2 mb-2">
                    <div>
                        <h2 class="h5 mb-1">Ödeme Planı Özeti</h2>
                        <div class="small text-muted">
                            @(Model.TotalInstallments > 1 ? "Aylık Taksitli" : "Peşin") · Taksit: @Model.TotalInstallments
                        </div>
                    </div>

                    @if (isAdmin && studentId > 0)
                    {
                        <a asp-controller="PaymentPlans"
                           asp-action="Create"
                           asp-route-studentId="@studentId"
                           class="btn btn-sm btn-primary d-md-none">
                            Yeni Plan
                        </a>
                    }
                </div>

                <div class="row g-2 mt-2">
                    <div class="col-12 col-md-6">
                        <div class="p-3 border rounded bg-white h-100">
                            <div class="small text-muted">Öğrenci</div>
                            <div class="fw-semibold">@Model.StudentFullName</div>
                            <div class="small text-muted">ID: @Model.StudentId</div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="p-3 border rounded bg-white h-100">
                            <div class="small text-muted">Toplam</div>
                            <div class="fw-semibold">@Model.TotalAmount.ToString("C2")</div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="p-3 border rounded bg-white h-100">
                            <div class="small text-muted">İlk Vade</div>
                            <div class="fw-semibold">@Model.FirstDueDate.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="p-3 border rounded bg-white h-100">
                            <div class="small text-muted">Ödenen</div>
                            <div class="fw-semibold text-success">@Model.TotalPaid.ToString("C2")</div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="p-3 border rounded bg-white h-100">
                            <div class="small text-muted">Kalan</div>
                            <div class="fw-semibold text-danger">@Model.TotalRemaining.ToString("C2")</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="p-3 border rounded bg-white h-100">
                            <div class="small text-muted">Ödeme Kayıtları</div>
                            <a asp-controller="Payments"
                               asp-action="Index"
                               asp-route-studentId="@Model.StudentId"
                               class="btn btn-sm btn-outline-secondary mt-2">
                                Tüm Ödemeleri Gör
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="card-surface">
        <div class="card-body">
            <h3 class="h6 mb-3">Taksitler</h3>

            <!-- Desktop table -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th class="text-end">Tutar</th>
                            <th class="text-end">İndirim</th>
                            <th class="text-end">Net</th>
                            <th>Vade</th>
                            <th>Durum</th>
                            <th>Ödenme Tarihi</th>
                            <th class="text-end">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Installments.Count == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-3">Taksit kaydı bulunamadı.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var i in Model.Installments)
                            {
                                var netAmount = i.Amount - (i.DiscountAmount ?? 0m);
                                string statusClass = i.Status switch
                                {
                                    PaymentStatus.Pending => "badge bg-warning text-dark",
                                    PaymentStatus.Overdue => "badge bg-danger",
                                    PaymentStatus.Paid => "badge bg-success",
                                    PaymentStatus.Cancelled => "badge bg-secondary",
                                    _ => "badge bg-secondary"
                                };

                                <tr>
                                    <td>@i.InstallmentNumber</td>
                                    <td class="text-end">@i.Amount.ToString("C2")</td>
                                    <td class="text-end">@(i.DiscountAmount.HasValue? i.DiscountAmount.Value.ToString("C2") : "-")</td>
                                    <td class="text-end fw-semibold">@netAmount.ToString("C2")</td>
                                    <td>@i.DueDate.ToString("dd.MM.yyyy")</td>
                                    <td><span class="@statusClass">@i.Status.ToDisplayName()</span></td>
                                    <td>@(i.PaidDate.HasValue? i.PaidDate.Value.ToString("dd.MM.yyyy") : "-")</td>
                                    <td class="text-end">
                                        <a asp-controller="Payments"
                                           asp-action="Details"
                                           asp-route-id="@i.PaymentId"
                                           class="btn btn-sm btn-outline-primary">
                                            Detay
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mobile cards -->
            <div class="d-md-none">
                @if (Model.Installments.Count == 0)
                {
                    <div class="text-center text-muted py-3">Taksit kaydı bulunamadı.</div>
                }
                else
                {
                    <div class="vstack gap-3">
                        @foreach (var i in Model.Installments)
                        {
                            var netAmount = i.Amount - (i.DiscountAmount ?? 0m);

                            string statusClass = i.Status switch
                            {
                                PaymentStatus.Pending => "badge bg-warning text-dark",
                                PaymentStatus.Overdue => "badge bg-danger",
                                PaymentStatus.Paid => "badge bg-success",
                                PaymentStatus.Cancelled => "badge bg-secondary",
                                _ => "badge bg-secondary"
                            };

                            <div class="card border shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div>
                                            <div class="fw-semibold">Taksit #@i.InstallmentNumber</div>
                                            <div class="small text-muted">Vade: @i.DueDate.ToString("dd.MM.yyyy")</div>
                                        </div>
                                        <span class="@statusClass">@i.Status.ToDisplayName()</span>
                                    </div>

                                    <div class="mt-3">
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">Tutar</span>
                                            <span>@i.Amount.ToString("C2")</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">İndirim</span>
                                            <span>@(i.DiscountAmount.HasValue? i.DiscountAmount.Value.ToString("C2") : "-")</span>
                                        </div>
                                        <div class="d-flex justify-content-between mt-1">
                                            <span class="text-muted">Net</span>
                                            <span class="fw-semibold">@netAmount.ToString("C2")</span>
                                        </div>

                                        <div class="d-flex justify-content-between mt-2">
                                            <span class="text-muted">Ödenme</span>
                                            <span>@(i.PaidDate.HasValue? i.PaidDate.Value.ToString("dd.MM.yyyy") : "-")</span>
                                        </div>
                                    </div>

                                    <div class="d-grid mt-3">
                                        <a asp-controller="Payments"
                                           asp-action="Details"
                                           asp-route-id="@i.PaymentId"
                                           class="btn btn-outline-primary">
                                            Ödeme Detayı
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

        </div>
    </section>

    @if (isAdmin && studentId > 0)
    {
        <div class="d-md-none position-sticky bottom-0 start-0 end-0 bg-white border-top" style="z-index: 1020;">
            <div class="container-fluid py-2">
                <a asp-controller="PaymentPlans"
                   asp-action="Create"
                   asp-route-studentId="@studentId"
                   class="btn btn-primary w-100">
                    Yeni Ödeme Planı Oluştur
                </a>
            </div>
        </div>
    }
}
