<section class="mt-4">
    <div class="card-surface">
        <h2 class="h6 mb-2">Aidatlar ve Aidat Planı</h2>
        <p class="small text-muted mb-3">
            Bu öğrencinin aidat planını ve aidat kayıtlarını görüntüleyebilirsiniz.
        </p>

        <div class="d-flex flex-wrap gap-2">
            <a asp-controller="PaymentPlans"
               asp-action="Student"
               asp-route-studentId="@Model.Id"
               class="btn btn-sm btn-outline-primary">
                Aidat Planını Gör
            </a>

            <a asp-controller="Payments"
               asp-action="Index"
               asp-route-studentId="@Model.Id"
               class="btn btn-sm btn-outline-secondary">
                Aidat Kayıtlarını Gör
            </a>

            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <a asp-controller="PaymentPlans"
                   asp-action="Create"
                   asp-route-studentId="@Model.Id"
                   class="btn btn-sm btn-primary">
                    Yeni Aidat Planı Oluştur
                </a>
            }
        </div>
    </div>
</section>
