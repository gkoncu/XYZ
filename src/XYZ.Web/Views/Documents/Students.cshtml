@model XYZ.Web.Models.Documents.DocumentOwnerIndexViewModel<XYZ.Application.Features.Documents.Queries.DocumentStatus.StudentDocumentStatusListItemDto>

@{
    ViewData["Title"] = Model.Title;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">@Model.Title</h2>
</div>

<form method="get" class="card card-body mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-6">
            <label class="form-label">Arama</label>
            <input class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Öğrenci adı" />
        </div>

        <div class="col-md-3">
            <input type="hidden" name="onlyIncomplete" value="false" />
            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" name="onlyIncomplete" value="true" id="onlyIncomplete"
                       @(Model.OnlyIncomplete ? "checked" : "") />
                <label class="form-check-label" for="onlyIncomplete">Sadece eksikler</label>
            </div>
        </div>

        <div class="col-md-3 text-end">
            <button class="btn btn-primary" type="submit">Filtrele</button>
        </div>
    </div>
</form>

<div class="card">
    <div class="table-responsive">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Öğrenci</th>
                    <th class="text-center">Eksik</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items is null || Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">Kayıt bulunamadı.</td>
                    </tr>
                }
                else
                {
                    foreach (var s in Model.Items)
                    {
                        <tr>
                            <td>@s.FullName</td>
                            <td class="text-center">
                                @if (s.MissingCount > 0)
                                {
                                    <span class="badge bg-warning text-dark">Eksik (@s.MissingCount)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Tam</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-controller="Documents"
                                   asp-action="Student"
                                   asp-route-studentId="@s.StudentId">
                                    Belgeleri Yönet
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
