@model XYZ.Web.Models.Documents.UserDocumentsViewModel

@{
    ViewData["Title"] = Model.Title;

    var missingCount = Model.Status?.MissingCount ?? 0;
    var isComplete = Model.Status?.IsComplete ?? true;

    var isCoach = Model.Title.Contains("Koç");
    var returnTo = isCoach ? "coach" : "student";
}

<section class="mb-3">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
        <div>
            <h2 class="h4 mb-1">@Model.Title</h2>
            @if (!isComplete)
            {
                <div class="text-muted small">Eksik belge sayısı: <strong>@missingCount</strong></div>
            }
            else
            {
                <div class="text-muted small">Tüm zorunlu belgeler tamam.</div>
            }
        </div>

        <div class="d-flex flex-wrap gap-2 align-items-center">
            @if (!isComplete)
            {
                <span class="badge bg-warning text-dark">Eksik (@missingCount)</span>
            }
            else
            {
                <span class="badge bg-success">Tam</span>
            }

            <button type="button" class="btn btn-sm btn-primary"
                    data-bs-toggle="modal" data-bs-target="#uploadDocModal">
                Yeni Belge Yükle
            </button>

            <a class="btn btn-sm btn-outline-secondary"
               href="@(Context.Request.Path + Context.Request.QueryString)">
                Yenile
            </a>
        </div>
    </div>
</section>

<div class="row g-3">
    <div class="col-lg-5">
        <div class="card-surface">
            <div class="fw-semibold mb-2">Zorunlu Belgeler</div>

            @if (Model.Status is null)
            {
                <div class="text-muted">Durum bilgisi alınamadı.</div>
            }
            else if (Model.Status.MissingCount == 0)
            {
                <div class="text-success">Tüm zorunlu belgeler tamam.</div>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var m in Model.Status.Missing.OrderBy(x => x.SortOrder).ThenBy(x => x.Name))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@m.Name</span>
                            <span class="badge bg-warning text-dark">Eksik</span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card-surface">
            <div class="d-flex justify-content-between align-items-center gap-2 mb-2">
                <div class="fw-semibold">Yüklenen Belgeler</div>

                <button type="button" class="btn btn-sm btn-outline-primary d-lg-none"
                        data-bs-toggle="modal" data-bs-target="#uploadDocModal">
                    Belge Yükle
                </button>
            </div>

            @if (Model.Documents is null || Model.Documents.Count == 0)
            {
                <div class="text-center text-muted py-4">Henüz yüklenmiş belge yok.</div>
            }
            else
            {
                <div class="table-responsive d-none d-md-block">
                    <table class="table table-modern mb-0 align-middle">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Tür</th>
                                <th>Yükleyen</th>
                                <th>Tarih</th>
                                <th class="text-end">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Documents)
                            {
                                <tr>
                                    <td class="fw-semibold">@d.Name</td>
                                    <td>@d.DocumentDefinitionName</td>
                                    <td>@d.UploadedBy</td>
                                    <td>@d.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-controller="Documents"
                                           asp-action="Download"
                                           asp-route-id="@d.Id">
                                            İndir
                                        </a>

                                        <form method="post" class="d-inline" asp-action="Delete">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@d.Id" />
                                            <input type="hidden" name="returnTo" value="@returnTo" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Belge silinsin mi?');">
                                                Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-md-none">
                    <div class="vstack gap-3">
                        @foreach (var d in Model.Documents)
                        {
                            <div class="card border shadow-sm">
                                <div class="card-body">
                                    <div class="fw-semibold">@d.Name</div>
                                    <div class="small text-muted">@d.DocumentDefinitionName</div>
                                    <div class="small text-muted">Yükleyen: @d.UploadedBy</div>
                                    <div class="small text-muted">@d.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</div>

                                    <div class="d-flex gap-2 mt-3">
                                        <a class="btn btn-outline-secondary flex-fill"
                                           asp-controller="Documents"
                                           asp-action="Download"
                                           asp-route-id="@d.Id">
                                            İndir
                                        </a>

                                        <form method="post" class="flex-fill" asp-action="Delete">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@d.Id" />
                                            <input type="hidden" name="returnTo" value="@returnTo" />
                                            <button type="submit" class="btn btn-outline-danger w-100"
                                                    onclick="return confirm('Belge silinsin mi?');">
                                                Sil
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Upload modal -->
<div class="modal fade" id="uploadDocModal" tabindex="-1" aria-labelledby="uploadDocModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable docs-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadDocModalLabel">Yeni Belge Yükle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                @if (isCoach)
                {
                    <form method="post" enctype="multipart/form-data"
                          asp-action="UploadCoach"
                          asp-route-coachId="@Model.OwnerId">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                        <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label">Belge Türü</label>
                                <select class="form-select bg-white text-dark" asp-for="DocumentDefinitionId" asp-items="Model.DocumentDefinitionOptions">
                                    <option value="">Seçiniz</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Dosya</label>
                                <input class="form-control bg-white text-dark" type="file" asp-for="File" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Görünen Ad (opsiyonel)</label>
                                <input class="form-control bg-white text-dark" asp-for="Name" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Açıklama (opsiyonel)</label>
                                <textarea class="form-control bg-white text-dark" asp-for="Description" rows="2"></textarea>
                            </div>

                            <div class="col-12 d-flex gap-2 mt-2">
                                <button class="btn btn-primary flex-fill" type="submit">Yükle</button>
                                <button class="btn btn-outline-secondary flex-fill" type="button" data-bs-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <form method="post" enctype="multipart/form-data"
                          asp-action="UploadStudent"
                          asp-route-studentId="@Model.OwnerId">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>


                        <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label">Belge Türü</label>
                                <select class="form-select bg-white text-dark" asp-for="DocumentDefinitionId" asp-items="Model.DocumentDefinitionOptions">
                                    <option value="">Seçiniz</option>
                                </select>
                                <span asp-validation-for="DocumentDefinitionId" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Dosya</label>
                                <input class="form-control bg-white text-dark" type="file" asp-for="File" />
                                <span asp-validation-for="File" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Görünen Ad (opsiyonel)</label>
                                <input class="form-control bg-white text-dark" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Açıklama (opsiyonel)</label>
                                <textarea class="form-control bg-white text-dark" asp-for="Description" rows="2"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-12 d-flex gap-2 mt-2">
                                <button class="btn btn-primary flex-fill" type="submit">Yükle</button>
                                <button class="btn btn-outline-secondary flex-fill" type="button" data-bs-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
