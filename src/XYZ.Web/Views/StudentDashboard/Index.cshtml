@model StudentDashboardViewModel
@{
    ViewData["Title"] = "Öğrenci Paneli";

    var total = Model.Stats.TotalSessions;
    var attended = Model.Stats.AttendedSessions;
    var missed = Model.Stats.MissedSessions;

    var attendanceRate = total > 0 ? (int)Math.Round((attended * 100.0) / total) : 0;
    var missedRate = total > 0 ? (int)Math.Round((missed * 100.0) / total) : 0;
}

<div class="d-flex flex-wrap justify-content-between align-items-end gap-2 mb-3">
    <div>
        <h2 class="mb-1">Öğrenci Paneli</h2>
        <div class="text-muted small">Hoş geldin, @Model.UserDisplayName</div>
    </div>

    <div class="d-flex flex-wrap gap-2">
        <a asp-controller="Payments" asp-action="My" class="btn btn-sm btn-outline-primary">
            Ödemelerim
        </a>
        <a asp-controller="PaymentPlans" asp-action="My" class="btn btn-sm btn-outline-secondary">
            Ödeme Planım
        </a>
        <a asp-controller="Profile" asp-action="Index" class="btn btn-sm btn-primary">
            Profilim
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="text-muted small">Toplam Antrenman</div>
            <div class="fs-4 fw-semibold mt-1">@Model.Stats.TotalSessions</div>
            <div class="text-muted small">Toplam katılım kaydı</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="text-muted small">Katıldığı</div>
            <div class="fs-4 fw-semibold mt-1 text-success">@Model.Stats.AttendedSessions</div>
            <div class="text-muted small">Devam eden antrenmanlar</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="text-muted small">Kaçırdığı</div>
            <div class="fs-4 fw-semibold mt-1 text-danger">@Model.Stats.MissedSessions</div>
            <div class="text-muted small">Katılmadığı antrenmanlar</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-surface p-3 h-100">
            <div class="text-muted small">Yaklaşan Antrenmanlar</div>
            <div class="fs-4 fw-semibold mt-1">@Model.Stats.UpcomingSessionsCount</div>
            <div class="text-muted small">Planlı oturum sayısı</div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12 col-lg-6">
        <div class="card-surface p-3 h-100">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Devam Durumu</div>
                <span class="badge bg-light text-dark border">@attendanceRate% katılım</span>
            </div>

            <div class="mt-3">
                <div class="d-flex justify-content-between small text-muted">
                    <span>Katıldı: <strong class="text-success">@attended</strong></span>
                    <span>Kaçırdı: <strong class="text-danger">@missed</strong></span>
                    <span>Toplam: <strong>@total</strong></span>
                </div>

                <div class="progress mt-2" style="height: 10px;">
                    <div class="progress-bar" role="progressbar"
                         style="width: @attendanceRate%;"
                         aria-valuenow="@attendanceRate" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>

                @if (total > 0)
                {
                    <div class="text-muted small mt-2">
                        Kaçırma oranı: <span class="fw-semibold">@missedRate%</span>
                    </div>
                }
                else
                {
                    <div class="text-muted small mt-2">
                        Henüz katılım kaydı bulunmuyor.
                    </div>
                }
            </div>

            <div class="mt-3 d-flex flex-wrap gap-2">
                <a asp-controller="Students" asp-action="Details" class="btn btn-sm btn-outline-secondary">
                    Bilgilerim
                </a>
                <a asp-controller="Payments" asp-action="My" class="btn btn-sm btn-outline-primary">
                    Ödeme Geçmişim
                </a>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card-surface p-3 h-100">
            <div class="text-muted small">Sıradaki Antrenman</div>

            @if (Model.Stats.NextSessionDate.HasValue)
            {
                <div class="fw-semibold mt-2">
                    @Model.Stats.NextSessionClassName
                </div>

                <div class="text-muted small mt-1">
                    @Model.Stats.NextSessionDate.Value.ToString("dd.MM.yyyy")
                    @if (Model.Stats.NextSessionStartTime.HasValue)
                    {
                        @(" - " + Model.Stats.NextSessionStartTime.Value.ToString("HH:mm"))
                    }
                </div>

                <div class="alert alert-light border mt-3 mb-0 small">
                    Ders saatinize 5-10 dakika önce gelmeniz önerilir.
                </div>
            }
            else
            {
                <div class="text-muted small mt-2">
                    Yakın tarihte planlanmış bir antrenman bulunmuyor.
                </div>

                <div class="alert alert-light border mt-3 mb-0 small">
                    Plan bilgisi için koçunuzla iletişime geçebilirsiniz.
                </div>
            }
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12">
        <div class="card-surface p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Ödeme Durumu</div>
                <a class="small" asp-controller="Payments" asp-action="My">Detay</a>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-baseline mt-2 gap-2">
                <div>
                    <div class="fw-semibold">@Model.Stats.OutstandingPaymentsCount adet</div>
                    <div class="text-muted small">Bekleyen ödeme</div>
                </div>

                <div class="fs-5 fw-semibold">
                    @Model.Stats.OutstandingPaymentsAmount.ToString("C2")
                </div>
            </div>

            <div class="mt-3 d-flex flex-wrap gap-2">
                <a asp-controller="Payments" asp-action="My" class="btn btn-sm btn-outline-primary">
                    Ödemelerimi Gör
                </a>
                <a asp-controller="PaymentPlans" asp-action="My" class="btn btn-sm btn-outline-secondary">
                    Ödeme Planımı Gör
                </a>
            </div>

            <div class="text-muted small mt-3">
                Not: Elden ödeme yaptıysanız, sistem güncellemesi için koçunuz veya yönetimle iletişime geçebilirsiniz.
            </div>
        </div>
    </div>
</div>
