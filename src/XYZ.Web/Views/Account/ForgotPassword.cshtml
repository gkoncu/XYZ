@model XYZ.Web.Models.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container" style="max-width:520px;">
    <div class="card-surface">
        <h3 class="mb-2">Şifremi Unuttum</h3>
        <p class="text-muted mb-4">E-posta adresinizi girin. Hesabınız mevcutsa şifre belirleme bağlantısı gönderilecektir.</p>

        @if (!string.IsNullOrWhiteSpace(Model.InfoMessage))
        {
            <div class="alert alert-success">@Model.InfoMessage</div>
        }

        <form asp-action="ForgotPassword" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Bağlantı Gönder</button>

            <div class="mt-3 d-flex justify-content-between">
                <a asp-action="Login" class="text-decoration-none">Giriş ekranına dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
